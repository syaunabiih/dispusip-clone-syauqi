<%- include('partials/header', { title: 'Tambah Buku', active: 'add' }) %>

<link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/tom-select/dist/js/tom-select.complete.min.js"></script>

<h1 class="text-2xl font-bold mb-6">➕ Tambah Buku Baru</h1>

<form 
    action="/admin/books/add" 
    method="POST" 
    enctype="multipart/form-data"
    class="bg-white p-6 rounded-lg shadow space-y-6"
>

    <!-- INFORMASI DASAR -->
    <div class="grid grid-cols-2 gap-6">
        <div class="space-y-4">
            <div>
                <label class="font-medium">Judul</label>
                <input type="text" name="title" required class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Edisi</label>
                <input type="text" name="edition" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Tahun Terbit</label>
                <input type="text" name="publish_year" maxlength="4" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Tempat Terbit</label>
                <input type="text" name="publish_place" class="w-full p-2 border rounded">
            </div>
        </div>

        <div class="space-y-4">
            <div>
                <label class="font-medium">Deskripsi Fisik</label>
                <input type="text" name="physical_description" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">ISBN</label>
                <input type="text" name="isbn" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Call Number</label>
                <input type="text" name="call_number" class="w-full p-2 border rounded">
            </div>
        </div>
    </div>

    <!-- ABSTRAK DAN CATATAN -->
    <div>
        <label class="font-medium">Abstrak</label>
        <textarea name="abstract" rows="4" class="w-full p-2 border rounded"></textarea>
    </div>

    <div>
        <label class="font-medium">Catatan</label>
        <textarea name="notes" rows="3" class="w-full p-2 border rounded"></textarea>
    </div>

    <!-- AUTHOR & PUBLISHER -->
    <div class="grid grid-cols-2 gap-6">
        <div>
            <label class="font-medium">Penulis</label>
            <select name="authors[]" id="author-select" class="w-full p-2 border rounded" multiple>
                <% authors.forEach(a => { %>
                    <option value="<%= a.id %>"><%= a.name %></option>
                <% }) %>
            </select>
        </div>

        <div>
            <label class="font-medium">Penerbit</label>
            <select name="publishers[]" id="publisher-select" class="w-full p-2 border rounded" multiple>
                <% publishers.forEach(p => { %>
                    <option value="<%= p.id %>"><%= p.name %></option>
                <% }) %>
            </select>
        </div>
    </div>

    <!-- CATEGORY & SUBJECT -->
    <div class="grid grid-cols-2 gap-6">
        <div>
            <label class="font-medium">Kategori</label>
            <select name="category_id" id="category-select" class="w-full p-2 border rounded">
                <option value="">-- Pilih Kategori --</option>

                <% categories.forEach(c => { %>
                    <option value="<%= c.id %>"><%= c.name %></option>
                <% }) %>
            </select>
        </div>

        <div>
            <label class="font-medium">Subjek</label>
            <select name="subjects[]" id="subject-select" class="w-full p-2 border rounded" multiple>
                <% subjects.forEach(s => { %>
                    <option value="<%= s.id %>"><%= s.name %></option>
                <% }) %>
            </select>
        </div>
    </div>

    <!-- INFORMASI LAIN -->
    <div class="grid grid-cols-2 gap-6">
        <div>
            <label class="font-medium">Bahasa</label>
            <input type="text" name="language" class="w-full p-2 border rounded">
        </div>

        <div>
            <label class="font-medium">Lokasi Rak</label>
            <input type="text" name="shelf_location" class="w-full p-2 border rounded">
        </div>
    </div>

    <div class="mt-4">
        <label class="font-medium text-blue-700">Nomor Induk Fisik Buku</label>
        <textarea 
            name="no_induk" 
            rows="4" 
            class="w-full p-2 border-2 border-blue-200 rounded focus:border-blue-500 outline-none" 
            placeholder="Masukkan nomor induk. Gunakan koma atau enter untuk banyak buku.&#10;Contoh:&#10;2024-001&#10;2024-002&#10;2024-003"
        ></textarea>
        <p class="text-sm text-gray-500 mt-1 italic">
            *Satu nomor induk akan terdaftar sebagai 1 eksemplar fisik buku. Total stok akan dihitung otomatis.
        </p>
    </div>

    <!-- STOK DAN GAMBAR -->
    <!-- <div class="grid grid-cols-2 gap-6">
        <div>
            <label class="font-medium">Total Stok</label>
            <input type="number" name="stock_total" class="w-full p-2 border rounded">
        </div>

        <div>
            <label class="font-medium">Stok Tersedia</label>
            <input type="number" name="stock_available" class="w-full p-2 border rounded">
        </div>
    </div> -->

    <!-- ================= COVER BUKU ================= -->
    <div>
        <label class="font-medium">Cover Buku</label>

        <div id="cover-wrapper" class="mt-2 space-y-2">
            <input 
                type="file" 
                name="image" 
                id="cover-input"
                accept="image/*" 
                class="w-full p-2 border rounded"
            >

            <div 
                id="cover-preview" 
                class="hidden flex items-center gap-3"
            >
                <span 
                    id="cover-filename"
                    class="px-3 py-1 bg-gray-200 rounded text-sm"
                ></span>

                <button 
                    type="button" 
                    id="remove-cover"
                    class="text-red-600 font-bold hover:text-red-800"
                >
                    ✖
                </button>
            </div>
        </div>
    </div>

    <button 
        type="submit"
        class="bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700"
    >
        Simpan Buku
    </button>

</form>

<script>
    function initTomSelect(selector, placeholderText, isMultiple = true) {
        return new TomSelect(selector, {
            plugins: ['remove_button'],
            create: true,
            sortField: { field: "text", direction: "asc" },
            placeholder: placeholderText,
            allowEmptyOption: !isMultiple
        });
    }

    initTomSelect("#category-select", "Cari atau tambah kategori...");
    initTomSelect("#author-select", "Cari atau tambah penulis...");
    initTomSelect("#subject-select", "Cari atau tambah subjek...");
    initTomSelect("#publisher-select", "Pilih atau tambah penerbit...");

    const coverInput = document.getElementById('cover-input');
    const coverPreview = document.getElementById('cover-preview');
    const coverFilename = document.getElementById('cover-filename');
    const removeCoverBtn = document.getElementById('remove-cover');

    coverInput.addEventListener('change', () => {
        if (!coverInput.files.length) return;

        coverFilename.textContent = coverInput.files[0].name;

        coverInput.classList.add('hidden');     // sembunyikan input
        coverPreview.classList.remove('hidden'); // tampilkan nama file
    });

    removeCoverBtn.addEventListener('click', () => {
        coverInput.value = "";                  // hapus file
        coverInput.classList.remove('hidden');  // munculkan input
        coverPreview.classList.add('hidden');   // sembunyikan preview
    });
</script>

<%- include('partials/footer') %>