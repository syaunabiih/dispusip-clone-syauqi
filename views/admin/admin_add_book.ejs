                <input type="text" name="publish_year" maxlength="4" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Tempat Terbit</label>
                <input type="text" name="publish_place" class="w-full p-2 border rounded">
            </div>
        </div>

        <div class="space-y-4">
            <div>
                <label class="font-medium">Deskripsi Fisik</label>
                <input type="text" name="physical_description" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">ISBN</label>
                <input type="text" name="isbn" value="<%= typeof book !== 'undefined' ? book.isbn : '' %>" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Nomor Panggil<span class="text-red-500">*</span></label>
                <input type="text" name="call_number" value="<%= typeof book !== 'undefined' ? book.call_number : '' %>" class="w-full p-2 border rounded">
            </div>
        </div>
    </div>

    <!-- ABSTRAK DAN CATATAN -->
    <div>
        <label class="font-medium">Abstrak</label>
        <textarea name="abstract" rows="4" class="w-full p-2 border rounded"></textarea>
    </div>

    <div>
        <label class="font-medium">Catatan</label>
        <textarea name="notes" rows="3" class="w-full p-2 border rounded"></textarea>
    </div>

    <!-- AUTHOR & PUBLISHER -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <div>
            <label class="font-medium">Penulis <span class="text-red-500">*</span></label>
            <select name="authors_penulis[]" id="penulis-select" class="w-full p-2 border rounded" multiple>
                <% authors.forEach(a => { %>
                    <option value="<%= a.id %>"><%= a.name %></option>
                <% }) %>
            </select>
        </div>

        <div>
            <label class="font-medium">Editor</label>
            <select name="authors_editor[]" id="editor-select" class="w-full p-2 border rounded" multiple>
                <% authors.forEach(a => { %>
                    <option value="<%= a.id %>"><%= a.name %></option>
                <% }) %>
            </select>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 mt-4">
        <div>
            <label class="font-medium">Penanggung Jawab</label>
            <select name="authors_pj[]" id="pj-select" class="w-full p-2 border rounded" multiple>
                <% authors.forEach(a => { %>
                    <option value="<%= a.id %>"><%= a.name %></option>
                <% }) %>
            </select>
        </div>

        <div>
            <label class="font-medium">Penerbit<span class="text-red-500">*</span></label>
            <select name="publishers" id="publisher-select" class="w-full p-2 border rounded">
                <% publishers.forEach(p => { %>
                    <option value="<%= p.id %>"><%= p.name %></option>
