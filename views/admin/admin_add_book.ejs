<%- include('partials/header', { title: 'Tambah Buku', active: 'add' }) %>

<link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/tom-select/dist/js/tom-select.complete.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<h1 class="text-2xl font-bold mb-6">âž• Tambah Buku Baru</h1>

<form 
    action="/admin/books/add" 
    method="POST" 
    enctype="multipart/form-data"
    class="bg-white p-4 sm:p-6 rounded-lg shadow space-y-4 sm:space-y-6"
>

    <!-- INFORMASI DASAR -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <div class="space-y-4">
            <div>
                <label class="font-medium">Judul <span class="text-red-500">*</span></label>
                <input type="text" name="title" required class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Edisi</label>
                <input type="text" name="edition" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Tahun Terbit</label>
                <input type="text" name="publish_year" maxlength="4" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Tempat Terbit</label>
                <input type="text" name="publish_place" class="w-full p-2 border rounded">
            </div>
        </div>

        <div class="space-y-4">
            <div>
                <label class="font-medium">Deskripsi Fisik</label>
                <input type="text" name="physical_description" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">ISBN</label>
                <input type="text" name="isbn" class="w-full p-2 border rounded">
            </div>

            <div>
                <label class="font-medium">Call Number</label>
                <input type="text" name="call_number" class="w-full p-2 border rounded">
            </div>
        </div>
    </div>

    <!-- ABSTRAK DAN CATATAN -->
    <div>
        <label class="font-medium">Abstrak</label>
        <textarea name="abstract" rows="4" class="w-full p-2 border rounded"></textarea>
    </div>

    <div>
        <label class="font-medium">Catatan</label>
        <textarea name="notes" rows="3" class="w-full p-2 border rounded"></textarea>
    </div>

    <!-- AUTHOR & PUBLISHER -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <div>
            <label class="font-medium">Penulis</label>
            <select name="authors[]" id="author-select" class="w-full p-2 border rounded" multiple>
                <% authors.forEach(a => { %>
                    <option value="<%= a.id %>"><%= a.name %></option>
                <% }) %>
            </select>
        </div>

        <div>
            <label class="font-medium">Penerbit</label>
            <select name="publishers[]" id="publisher-select" class="w-full p-2 border rounded" multiple>
                <% publishers.forEach(p => { %>
                    <option value="<%= p.id %>"><%= p.name %></option>
                <% }) %>
            </select>
        </div>
    </div>

    <!-- CATEGORY & SUBJECT -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <div>
            <label class="font-medium">Kategori <span class="text-red-500">*</span></label>
            <select name="category_id" id="category-select" class="w-full p-2 border rounded" required>
                <option value="">-- Pilih Kategori --</option>
                <% categories.forEach(c => { %>
                    <option value="<%= c.id %>"><%= c.name %></option>
                <% }) %>
            </select>
        </div>

        <div>
            <label class="font-medium">Subjek <span class="text-red-500">*</span></label>
            <select name="subjects[]" id="subject-select" class="w-full p-2 border rounded" multiple required>
                <% subjects.forEach(s => { %>
                    <option value="<%= s.id %>"><%= s.name %></option>
                <% }) %>
            </select>
        </div>
    </div>

    <!-- INFORMASI LAIN -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <div>
            <label class="font-medium">Bahasa</label>
            <input type="text" name="language" class="w-full p-2 border rounded">
        </div>
    </div>

    <!-- LOKASI RAK (POPUP MAP) -->
    <div>
        <label class="font-medium mb-2 block">Lokasi Rak <span class="text-red-500">*</span></label>
        <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
            <input type="hidden" name="shelf_location" id="shelf_location" value="" required>
            <div id="shelf-location-display" class="flex-1 p-2 border border-gray-300 rounded bg-gray-50 text-gray-600">
                <span id="shelf-location-text">Belum dipilih</span>
            </div>
            <!-- Tombol untuk membuka popup -->
            <button 
                type="button" 
                id="open-shelf-map-btn"
                class="w-full sm:w-auto bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors whitespace-nowrap"
            >
                <i class="fas fa-map-marked-alt mr-2"></i>Tambah Lokasi
            </button>
        </div>
    </div>

    <!-- POPUP/MODAL MAP RAK -->
    <div id="shelf-map-modal" class="fixed inset-0 z-[100] hidden">
        <!-- Overlay background hitam dengan animasi fade -->
        <div class="fixed inset-0 bg-black bg-opacity-75 transition-opacity duration-300 ease-out"></div>
        <!-- Container untuk konten modal -->
        <div class="fixed inset-0 flex items-center justify-center p-3 sm:p-4 md:p-6 pointer-events-none">
            <div id="shelf-map-modal-content" class="bg-white rounded-xl sm:rounded-2xl shadow-2xl max-w-5xl w-full mx-auto max-h-[90vh] sm:max-h-[85vh] overflow-hidden pointer-events-auto flex flex-col transform scale-95 opacity-0 transition-all duration-300 ease-out">
                <!-- Header Modal -->
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-4 sm:px-6 md:px-8 py-3 sm:py-4 border-b border-gray-200 flex-shrink-0">
                    <h3 class="font-bold text-gray-800 text-base sm:text-lg flex items-center justify-center sm:justify-start">
                        <i class="fas fa-map-marked-alt text-blue-600 mr-2 text-lg sm:text-xl"></i> 
                        <span>Pilih Lokasi Rak</span>
                    </h3>
                </div>
                <!-- Body Modal (Map) -->
                <div class="p-4 sm:p-5 md:p-6 flex-1 overflow-y-auto sm:overflow-y-visible min-h-0">
                    <p class="text-xs sm:text-sm text-gray-600 mb-4 text-center sm:text-left">
                        <i class="fas fa-info-circle text-blue-500 mr-1"></i>
                        Klik pada rak di denah di bawah ini untuk memilih lokasi rak buku.
                    </p>
                    <!-- Include map interaktif di dalam popup -->
                    <div id="shelf-map-popup-container" class="flex justify-center">
                        <%- include('partials/shelfMapInteractive', { inputFieldId: 'shelf_location', isPopup: true }) %>
                    </div>
                </div>
                <!-- Footer Modal -->
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-4 sm:px-6 md:px-8 py-3 sm:py-4 border-t border-gray-200 flex flex-col sm:flex-row justify-center sm:justify-end gap-3 flex-shrink-0">
                    <button 
                        type="button" 
                        id="cancel-shelf-map-btn"
                        class="w-full sm:w-auto px-5 sm:px-6 py-2.5 border-2 border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-100 hover:border-gray-400 active:scale-95 transition-all duration-200 ease-in-out shadow-sm hover:shadow-md"
                    >
                        <i class="fas fa-times mr-2"></i>Batal
                    </button>
                    <button 
                        type="button" 
                        id="confirm-shelf-map-btn"
                        class="w-full sm:w-auto px-5 sm:px-6 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg font-medium hover:from-blue-700 hover:to-blue-800 active:scale-95 transition-all duration-200 ease-in-out shadow-md hover:shadow-lg"
                    >
                        <i class="fas fa-check mr-2"></i>Simpan
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <label class="font-medium text-blue-700">Nomor Induk Fisik Buku <span class="text-red-500">*</span></label>
        <textarea 
            name="no_induk" 
            rows="4" 
            required
            class="w-full p-2 border-2 border-blue-200 rounded focus:border-blue-500 outline-none"
            placeholder="Masukkan nomor induk. Gunakan koma atau enter untuk banyak buku.&#10;Contoh:&#10;2024-001&#10;2024-002&#10;2024-003"
        ></textarea>
        <p class="text-sm text-gray-500 mt-1 italic">
            *Satu nomor induk akan terdaftar sebagai 1 eksemplar fisik buku. Total stok akan dihitung otomatis.
        </p>
    </div>

    <!-- STOK DAN GAMBAR -->
    <!-- <div class="grid grid-cols-2 gap-6">
        <div>
            <label class="font-medium">Total Stok</label>
            <input type="number" name="stock_total" class="w-full p-2 border rounded">
        </div>

        <div>
            <label class="font-medium">Stok Tersedia</label>
            <input type="number" name="stock_available" class="w-full p-2 border rounded">
        </div>
    </div> -->

    <!-- ================= COVER BUKU ================= -->
    <div>
        <label class="font-medium">Cover Buku</label>

        <div id="cover-wrapper" class="mt-2 space-y-2">
            <input 
                type="file" 
                name="image" 
                id="cover-input"
                accept="image/*" 
                class="w-full p-2 border rounded"
            >

            <div 
                id="cover-preview" 
                class="hidden flex items-center gap-3"
            >
                <span 
                    id="cover-filename"
                    class="px-3 py-1 bg-gray-200 rounded text-sm"
                ></span>

                <button 
                    type="button" 
                    id="remove-cover"
                    class="text-red-600 font-bold hover:text-red-800"
                >
                    âœ–
                </button>
            </div>
        </div>
    </div>

    <button 
        type="submit"
        class="w-full sm:w-auto bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition-colors"
    >
        Simpan Buku
    </button>

</form>

<script>
    function initTomSelect(selector, placeholderText, isMultiple = true) {
        return new TomSelect(selector, {
            plugins: ['remove_button'],
            create: true,
            sortField: { field: "text", direction: "asc" },
            placeholder: placeholderText,
            allowEmptyOption: !isMultiple
        });
    }

    initTomSelect("#category-select", "Cari atau tambah kategori...", false);
    initTomSelect("#author-select", "Cari atau tambah penulis...");
    initTomSelect("#subject-select", "Cari atau tambah subjek...");
    initTomSelect("#publisher-select", "Cari atau tambah penerbit...");

    const coverInput = document.getElementById('cover-input');
    const coverPreview = document.getElementById('cover-preview');
    const coverFilename = document.getElementById('cover-filename');
    const removeCoverBtn = document.getElementById('remove-cover');

    coverInput.addEventListener('change', () => {
        if (!coverInput.files.length) return;

        coverFilename.textContent = coverInput.files[0].name;

        coverInput.classList.add('hidden');     // sembunyikan input
        coverPreview.classList.remove('hidden'); // tampilkan nama file
    });

    removeCoverBtn.addEventListener('click', () => {
        coverInput.value = "";                  // hapus file
        coverInput.classList.remove('hidden');  // munculkan input
        coverPreview.classList.add('hidden');   // sembunyikan preview
    });

    // ================= POPUP MAP RAK =================
    const shelfMapModal = document.getElementById('shelf-map-modal');
    const openShelfMapBtn = document.getElementById('open-shelf-map-btn');
    const cancelShelfMapBtn = document.getElementById('cancel-shelf-map-btn');
    const confirmShelfMapBtn = document.getElementById('confirm-shelf-map-btn');
    const shelfLocationInput = document.getElementById('shelf_location');
    const shelfLocationText = document.getElementById('shelf-location-text');
    const shelfLocationDisplay = document.getElementById('shelf-location-display');

    // Debug: Cek apakah elemen ditemukan
    console.log('=== DEBUG POPUP MAP ===');
    console.log('shelfMapModal:', shelfMapModal);
    console.log('openShelfMapBtn:', openShelfMapBtn);
    console.log('shelfLocationInput:', shelfLocationInput);

    // Variabel untuk menyimpan nilai sementara saat di popup
    let tempShelfLocation = '';

    // Fungsi untuk update display lokasi rak
    function updateShelfLocationDisplay(value) {
        if (value && value.trim() !== '') {
            shelfLocationText.textContent = value;
            shelfLocationDisplay.classList.remove('bg-gray-50', 'text-gray-600');
            shelfLocationDisplay.classList.add('bg-blue-50', 'text-blue-800', 'font-medium');
        } else {
            shelfLocationText.textContent = 'Belum dipilih';
            shelfLocationDisplay.classList.remove('bg-blue-50', 'text-blue-800', 'font-medium');
            shelfLocationDisplay.classList.add('bg-gray-50', 'text-gray-600');
        }
    }

    // Buka popup
    if (openShelfMapBtn) {
        console.log('âœ… Event listener dipasang pada openShelfMapBtn');
        openShelfMapBtn.addEventListener('click', () => {
            console.log('ðŸ–±ï¸ Tombol Tambah Lokasi diklik!');
            // Simpan nilai saat ini sebagai nilai sementara
            tempShelfLocation = shelfLocationInput.value || '';
            
            // Pastikan format nilai benar (jika hanya "C1", tambahkan "Rak ")
            if (tempShelfLocation && !tempShelfLocation.match(/^Rak\s+/i)) {
                const match = tempShelfLocation.match(/^([A-H][12])$/i);
                if (match) {
                    tempShelfLocation = 'Rak ' + match[1];
                    shelfLocationInput.value = tempShelfLocation;
                }
            }
            
            shelfMapModal.classList.remove('hidden');
            shelfMapModal.classList.add('flex');
            document.body.style.overflow = 'hidden';
            
            // Animasi fade-in dan scale-up
            const modalContent = document.getElementById('shelf-map-modal-content');
            console.log('ðŸ“¦ modalContent:', modalContent);
            if (modalContent) {
                // Reset transform untuk animasi
                setTimeout(() => {
                    modalContent.classList.remove('scale-95', 'opacity-0');
                    modalContent.classList.add('scale-100', 'opacity-100');
                    console.log('âœ… Animasi modal diaktifkan');
                }, 10);
            } else {
                console.error('âŒ modalContent tidak ditemukan!');
            }
            
            console.log('ðŸ“Š Modal classes setelah dibuka:', shelfMapModal.className);
            
            // Tunggu sampai modal benar-benar ter-render dengan padding baru
            requestAnimationFrame(() => {
                requestAnimationFrame(() => {
                    // Tunggu lagi untuk memastikan padding responsif sudah ter-apply
                    setTimeout(() => {
                        const mapContainer = document.getElementById('shelf-map-container');
                        if (mapContainer) {
                            // Trigger event untuk re-inisialisasi highlight dengan multiple attempts
                            if (tempShelfLocation) {
                                // Multiple attempts untuk memastikan highlight ter-apply
                                [50, 150, 300, 500, 700].forEach(delay => {
                                    setTimeout(() => {
                                        const updateEvent = new CustomEvent('shelfLocationUpdated', { 
                                            detail: { value: tempShelfLocation } 
                                        });
                                        mapContainer.dispatchEvent(updateEvent);
                                        
                                        const popupEvent = new CustomEvent('shelfMapPopupOpened');
                                        window.dispatchEvent(popupEvent);
                                    }, delay);
                                });
                            } else {
                                // Trigger event popup opened untuk inisialisasi highlight
                                const popupEvent = new CustomEvent('shelfMapPopupOpened');
                                window.dispatchEvent(popupEvent);
                            }
                        }
                    }, 150); // Delay tambahan untuk memastikan padding ter-apply
                });
            });
        });
    }

    // Fungsi untuk tutup popup
    function closeShelfMapPopup(resetValue = false) {
        const modalContent = document.getElementById('shelf-map-modal-content');
        if (modalContent) {
            // Animasi fade-out dan scale-down
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
        }
        
        // Tunggu animasi selesai sebelum hide modal
        setTimeout(() => {
            if (resetValue && shelfLocationInput.value !== tempShelfLocation) {
                // Reset ke nilai awal jika dibatalkan
                shelfLocationInput.value = tempShelfLocation;
                // Trigger update di map untuk re-highlight
                setTimeout(() => {
                    const mapContainer = document.getElementById('shelf-map-container');
                    if (mapContainer) {
                        const event = new CustomEvent('shelfLocationUpdated', { 
                            detail: { value: tempShelfLocation || '' } 
                        });
                        mapContainer.dispatchEvent(event);
                    }
                }, 50);
            }
            shelfMapModal.classList.add('hidden');
            shelfMapModal.classList.remove('flex');
            document.body.style.overflow = ''; // Restore body scroll
        }, 300); // Sesuaikan dengan duration animasi (300ms)
    }

    // Batal button
    if (cancelShelfMapBtn) {
        cancelShelfMapBtn.addEventListener('click', () => {
            closeShelfMapPopup(true); // Reset nilai
        });
    }

    // Simpan button
    if (confirmShelfMapBtn) {
        confirmShelfMapBtn.addEventListener('click', () => {
            // Nilai sudah ter-update di input field oleh map handler
            const selectedValue = shelfLocationInput.value;
            updateShelfLocationDisplay(selectedValue);
            tempShelfLocation = selectedValue; // Update nilai sementara
            
            // Tutup popup tanpa reset
            closeShelfMapPopup(false);
        });
    }

    // Tutup popup saat klik di luar modal
    if (shelfMapModal) {
        shelfMapModal.addEventListener('click', (e) => {
            if (e.target === shelfMapModal) {
                closeShelfMapPopup(true); // Reset nilai saat klik di luar
            }
        });
    }

    // Update display saat input berubah (dari map handler)
    if (shelfLocationInput) {
        shelfLocationInput.addEventListener('change', () => {
            updateShelfLocationDisplay(shelfLocationInput.value);
        });
    }

    // Inisialisasi display
    if (shelfLocationInput && shelfLocationInput.value) {
        updateShelfLocationDisplay(shelfLocationInput.value);
    }

    document.querySelector('form').addEventListener('submit', async function(e) {
        e.preventDefault(); // Mencegah reload halaman

        const form = e.target;
        const formData = new FormData(form);

        // 1. Tampilkan Loading agar Admin tahu proses sedang berjalan
        Swal.fire({
            title: 'Sedang menyimpan...',
            allowOutsideClick: false,
            didOpen: () => { Swal.showLoading(); }
        });

        try {
            // 2. Kirim data ke Controller menggunakan Fetch
            const response = await fetch(form.action, {
                method: 'POST',
                body: formData // Mengirim data termasuk file gambar
            });

            const result = await response.json();

            if (response.ok && result.success) {
                // 3. JIKA BERHASIL: Muncul notifikasi sukses lalu pindah halaman
                Swal.fire({
                    icon: 'success',
                    title: 'Berhasil!',
                    text: 'Buku baru telah ditambahkan.',
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = result.redirectUrl;
                });
            } else {
                // 4. JIKA GAGAL (DUPLIKAT): Munculkan pesan error dari Controller
                Swal.fire({
                    icon: 'error',
                    title: 'Gagal Menyimpan',
                    text: result.message, // Ini akan berisi "Nomor Induk [xxx] sudah terdaftar..."
                    confirmButtonColor: '#3b82f6'
                });
            }
        } catch (error) {
            console.error(error);
            Swal.fire('Error', 'Terjadi kesalahan pada server atau jaringan.', 'error');
        }
    });
</script>

