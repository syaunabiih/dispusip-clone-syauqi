<script>

    function initTomSelect(selector, placeholderText, isMultiple = true) {
        return new TomSelect(selector, {
            plugins: ['remove_button'],
            create: true,
            sortField: { field: "text", direction: "asc" },
            placeholder: placeholderText,
            allowEmptyOption: !isMultiple
        });
    }

    new TomSelect("#category-select", {
        plugins: ['remove_button'],
        create: true,
        sortField: { field: "text", direction: "asc" },
        placeholder: "Cari atau tambah kategori...",
        allowEmptyOption: true,
        // Tambahkan ini agar tidak otomatis memilih baris pertama
        onInitialize: function() {
            this.setValue('');
        }
    });
    initTomSelect("#penulis-select", "Cari/tambah penulis...");
    initTomSelect("#editor-select", "Cari/tambah editor...");
    initTomSelect("#pj-select", "Cari/tambah penanggung jawab...");
    initTomSelect("#subject-select", "Cari atau tambah subjek...");
    new TomSelect("#publisher-select", {
        plugins: ['remove_button'],
        create: true,
        sortField: { field: "text", direction: "asc" },
        placeholder: "Cari atau tambah penerbit...",
        allowEmptyOption: true,
        // Tambahkan ini agar tidak otomatis memilih baris pertama
        onInitialize: function() {
            this.setValue('');
        }
    });

    const coverInput = document.getElementById('cover-input');
    const coverPreview = document.getElementById('cover-preview');
    const coverFilename = document.getElementById('cover-filename');
    const removeCoverBtn = document.getElementById('remove-cover');

    coverInput.addEventListener('change', () => {
        if (!coverInput.files.length) return;

        coverFilename.textContent = coverInput.files[0].name;

        coverInput.classList.add('hidden');     // sembunyikan input
        coverPreview.classList.remove('hidden'); // tampilkan nama file
    });

    removeCoverBtn.addEventListener('click', () => {
        coverInput.value = "";                  // hapus file
        coverInput.classList.remove('hidden');  // munculkan input
        coverPreview.classList.add('hidden');   // sembunyikan preview
    });

    // ================= POPUP MAP RAK =================
    const shelfMapModal = document.getElementById('shelf-map-modal');
    const openShelfMapBtn = document.getElementById('open-shelf-map-btn');
    const cancelShelfMapBtn = document.getElementById('cancel-shelf-map-btn');
    const confirmShelfMapBtn = document.getElementById('confirm-shelf-map-btn');
    const shelfLocationInput = document.getElementById('shelf_location');
    const shelfLocationText = document.getElementById('shelf-location-text');
    const shelfLocationDisplay = document.getElementById('shelf-location-display');

    // Debug: Cek apakah elemen ditemukan
    console.log('=== DEBUG POPUP MAP ===');
    console.log('shelfMapModal:', shelfMapModal);
    console.log('openShelfMapBtn:', openShelfMapBtn);
    console.log('shelfLocationInput:', shelfLocationInput);

    // Variabel untuk menyimpan nilai sementara saat di popup
    let tempShelfLocation = '';

    // Fungsi untuk update display lokasi rak
    function updateShelfLocationDisplay(value) {
        if (value && value.trim() !== '') {
            shelfLocationText.textContent = value;
            shelfLocationDisplay.classList.remove('bg-gray-50', 'text-gray-600');
            shelfLocationDisplay.classList.add('bg-blue-50', 'text-blue-800', 'font-medium');
        } else {
            shelfLocationText.textContent = 'Belum dipilih';
            shelfLocationDisplay.classList.remove('bg-blue-50', 'text-blue-800', 'font-medium');
            shelfLocationDisplay.classList.add('bg-gray-50', 'text-gray-600');
        }
    }

    // Buka popup
    if (openShelfMapBtn) {
        console.log('âœ… Event listener dipasang pada openShelfMapBtn');
        openShelfMapBtn.addEventListener('click', () => {
            console.log('ðŸ–±ï¸ Tombol Tambah Lokasi diklik!');
            // Simpan nilai saat ini sebagai nilai sementara
            tempShelfLocation = shelfLocationInput.value || '';
            
            shelfMapModal.classList.remove('hidden');
            shelfMapModal.classList.add('flex');
            document.body.style.overflow = 'hidden';
            
            // Animasi fade-in dan scale-up
            const modalContent = document.getElementById('shelf-map-modal-content');
            console.log('ðŸ“¦ modalContent:', modalContent);
            if (modalContent) {
                // Reset transform untuk animasi
                setTimeout(() => {
                    modalContent.classList.remove('scale-95', 'opacity-0');
                    modalContent.classList.add('scale-100', 'opacity-100');
                    console.log('âœ… Animasi modal diaktifkan');
                }, 10);
            } else {
                console.error('âŒ modalContent tidak ditemukan!');
            }
            
            console.log('ðŸ“Š Modal classes setelah dibuka:', shelfMapModal.className);
            
            // Tunggu sampai modal benar-benar ter-render dengan padding baru
            requestAnimationFrame(() => {
                requestAnimationFrame(() => {
                    // Tunggu lagi untuk memastikan padding responsif sudah ter-apply
                    setTimeout(() => {
                        const mapContainer = document.getElementById('shelf-map-container');
                        if (mapContainer) {
                            // Trigger event untuk re-inisialisasi highlight dengan multiple attempts
                            if (tempShelfLocation) {
                                // Multiple attempts untuk memastikan highlight ter-apply
                                [50, 150, 300, 500, 700].forEach(delay => {
                                    setTimeout(() => {
                                        const updateEvent = new CustomEvent('shelfLocationUpdated', { 
                                            detail: { value: tempShelfLocation } 
                                        });
                                        mapContainer.dispatchEvent(updateEvent);
                                        
                                        const popupEvent = new CustomEvent('shelfMapPopupOpened');
                                        window.dispatchEvent(popupEvent);
                                    }, delay);
                                });
                            } else {
                                // Trigger event popup opened untuk inisialisasi highlight
                                const popupEvent = new CustomEvent('shelfMapPopupOpened');
                                window.dispatchEvent(popupEvent);
                            }
                        }
                    }, 150); // Delay tambahan untuk memastikan padding ter-apply
                });
            });
        });
    }

    // Fungsi untuk tutup popup
    function closeShelfMapPopup(resetValue = false) {
        const modalContent = document.getElementById('shelf-map-modal-content');
        if (modalContent) {
            // Animasi fade-out dan scale-down
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
        }
        
        // Tunggu animasi selesai sebelum hide modal
        setTimeout(() => {
            if (resetValue && shelfLocationInput.value !== tempShelfLocation) {
                // Reset ke nilai awal jika dibatalkan
                shelfLocationInput.value = tempShelfLocation;
                // Trigger update di map untuk re-highlight
                setTimeout(() => {
                    const mapContainer = document.getElementById('shelf-map-container');
                    if (mapContainer) {
                        const event = new CustomEvent('shelfLocationUpdated', { 
                            detail: { value: tempShelfLocation || '' } 
                        });
                        mapContainer.dispatchEvent(event);
                    }
                }, 50);
            }
            shelfMapModal.classList.add('hidden');
            shelfMapModal.classList.remove('flex');
            document.body.style.overflow = ''; // Restore body scroll
        }, 300); // Sesuaikan dengan duration animasi (300ms)
    }

    // Batal button
    if (cancelShelfMapBtn) {
        cancelShelfMapBtn.addEventListener('click', () => {
            closeShelfMapPopup(true); // Reset nilai
        });
    }

    // Simpan button
    if (confirmShelfMapBtn) {
        confirmShelfMapBtn.addEventListener('click', () => {
            // Nilai sudah ter-update di input field oleh map handler
            const selectedValue = shelfLocationInput.value;
            updateShelfLocationDisplay(selectedValue);
            tempShelfLocation = selectedValue; // Update nilai sementara
            
            // Tutup popup tanpa reset
            closeShelfMapPopup(false);
        });
    }

    // Tutup popup saat klik di luar modal
    if (shelfMapModal) {
        shelfMapModal.addEventListener('click', (e) => {
            if (e.target === shelfMapModal) {
                closeShelfMapPopup(true); // Reset nilai saat klik di luar
            }
        });
    }

    // Update display saat input berubah (dari map handler)
    if (shelfLocationInput) {
        shelfLocationInput.addEventListener('change', () => {
            updateShelfLocationDisplay(shelfLocationInput.value);
        });
    }

    // Inisialisasi display
    if (shelfLocationInput && shelfLocationInput.value) {
        updateShelfLocationDisplay(shelfLocationInput.value);
    }

    async function compressImage(file, maxSizeKB = 100, maxWidth = 800) {
        return new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);

            reader.onload = () => {
                const img = new Image();
                img.src = reader.result;

                img.onload = () => {
                    const canvas = document.createElement('canvas');
                    let width = img.width;
                    let height = img.height;

                    // Resize jika terlalu besar
                    if (width > maxWidth) {
                        height = Math.round((height * maxWidth) / width);
                        width = maxWidth;
                    }

                    canvas.width = width;
                    canvas.height = height;

                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(img, 0, 0, width, height);

                    let quality = 0.8;

                    function tryCompress() {
                        canvas.toBlob(
                            blob => {
                                if (!blob) return reject('Gagal kompres gambar');

                                const sizeKB = blob.size / 1024;

                                if (sizeKB <= maxSizeKB || quality <= 0.3) {
                                    resolve(
                                        new File([blob], file.name, {
                                            type: 'image/jpeg'
                                        })
                                    );
                                } else {
                                    quality -= 0.1;
                                    tryCompress();
                                }
                            },
                            'image/jpeg',
                            quality
                        );
                    }

                    tryCompress();
                };

                img.onerror = reject;
            };

            reader.onerror = reject;
        });
    }

    document.querySelector('form').addEventListener('submit', async function(e) {
        e.preventDefault();

        const form = e.target;
        
        // 1. Ambil nilai field biasa
        const title = form.querySelector('[name="title"]').value.trim();
        const category = form.querySelector('[name="category_id"]').value;
        const callNumber = form.querySelector('[name="call_number"]').value.trim();

        // 2. Ambil nilai dari TomSelect
        const penulis = document.getElementById('penulis-select').tomselect.getValue();
        const subjek = document.getElementById('subject-select').tomselect.getValue();
        const publishers = document.getElementById('publisher-select').tomselect.getValue();

        // 3. Ambil data dari Tabel Eksemplar
        const indukInputs = Array.from(document.querySelectorAll('.input-induk')).map(i => i.value.trim()).filter(v => v !== "");
        const barcodeInputs = Array.from(document.querySelectorAll('.input-barcode')).map(i => i.value.trim()); // Biarkan barcode bisa kosong

        // 4. VALIDASI FRONTEND
        // Cek field utama
        if (!title || !category || !callNumber || penulis.length === 0 || subjek.length === 0 || publishers.length === 0) {
            Swal.fire({
                icon: 'warning',
                title: 'Data Belum Lengkap',
                text: 'Mohon lengkapi semua kolom utama yang bertanda bintang (*)',
            });
            return;
        }

        // Cek apakah tabel eksemplar diisi
        if (indukInputs.length === 0) {
            Swal.fire({
                icon: 'warning',
                title: 'Eksemplar Kosong',
                text: 'Mohon tambahkan minimal satu Nomor Induk buku pada tabel.',
            });
            return;
        }

        // 5. CEK DUPLIKAT INTERNAL (Antar Baris di Form)

        const uniqueInduk = new Set(indukInputs);
        const filledBarcodes = barcodeInputs.filter(b => b.trim() !== "");
        const uniqueBarcodes = new Set(filledBarcodes);

        if (uniqueInduk.size !== indukInputs.length && uniqueBarcodes.size !== filledBarcodes.length) {
            Swal.fire({
                icon: 'error',
                title: 'Duplikat Data!',
                text: 'Ada Nomor Induk dan Nomor Barcode yang sama di dalam tabel.',
            });
            return;
        }

        else if (uniqueInduk.size !== indukInputs.length) {
            Swal.fire({
                icon: 'error',
                title: 'Duplikat Nomor Induk!',
                text: 'Ada Nomor Induk yang sama di dalam tabel.',
            });
            return;
        }
        
        else if (uniqueBarcodes.size !== filledBarcodes.length) {
            Swal.fire({
                icon: 'error',
                title: 'Duplikat Barcode!',
                text: 'Ada Nomor Barcode yang sama di dalam tabel.',
            });
            return;
        }

        // 6. PROSES KIRIM KE BACKEND
        Swal.fire({
            title: 'Sedang menyimpan...',
            allowOutsideClick: false,
            didOpen: () => Swal.showLoading()
        });

        try {
            const formData = new FormData(form);

            // Timpa nilai no_induk dan no_barcode dengan data dari tabel (format newline agar sesuai controller)
            formData.set('no_induk', indukInputs.join('\n'));
            formData.set('no_barcode', Array.from(document.querySelectorAll('.input-barcode')).map(i => i.value.trim()).join('\n'));

            const coverInput = document.getElementById('cover-input');
            const file = coverInput.files[0];
            if (file) {
                const compressedFile = await compressImage(file, 100); 
                formData.set('image', compressedFile); 
            }

            const response = await fetch(form.action, {
                method: 'POST',
                body: formData
            });

            const result = await response.json();

            if (response.ok && result.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Berhasil!',
                    text: 'Buku baru telah ditambahkan.',
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = result.redirectUrl;
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Gagal Menyimpan',
                    text: result.message
                });
            }
        } catch (error) {
            console.error(error);
            Swal.fire('Error', 'Terjadi kesalahan sistem.', 'error');
        }
    });

    const eksemplarBody = document.getElementById('eksemplar-body');
    const addRowBtn = document.getElementById('add-row-btn');
    const emptyState = document.getElementById('empty-state');

    function updateEmptyState() {
        emptyState.classList.toggle('hidden', eksemplarBody.children.length > 0);
    }

    function updateRowNumbers() {
        Array.from(eksemplarBody.children).forEach((row, index) => {
            row.cells[0].textContent = index + 1;
        });
    }

    function addRow() {
        const row = document.createElement('tr');
        row.className = "hover:bg-gray-50 transition-colors";
        row.innerHTML = `
            <td class="p-3 border-b text-center text-gray-400 font-mono"></td>
            <td class="p-2 border-b">
                <input type="text" name="induk_row[]" class="input-induk w-full p-2 border rounded focus:ring-2 focus:ring-blue-300 outline-none" placeholder="Contoh: 2024-001" required>
            </td>
            <td class="p-2 border-b">
                <input type="text" name="barcode_row[]" class="input-barcode w-full p-2 border rounded focus:ring-2 focus:ring-blue-300 outline-none" placeholder="Scan barcode...">
            </td>
            <td class="p-2 border-b text-center">
                <button type="button" class="text-red-500 hover:text-red-700 remove-row-btn p-2">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </td>
        `;
        eksemplarBody.appendChild(row);
        updateRowNumbers();
        updateEmptyState();

        row.querySelector('.remove-row-btn').addEventListener('click', () => {
            row.remove();
            updateRowNumbers();
            updateEmptyState();
        });
    }

    addRowBtn.addEventListener('click', addRow);
</script>

