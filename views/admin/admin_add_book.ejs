    /* Hover state yang sama untuk semua */
    #category-select + .ts-wrapper .ts-control .item:hover,
    #author-select + .ts-wrapper .ts-control .item:hover,
    #publisher-select + .ts-wrapper .ts-control .item:hover,
    #subject-select + .ts-wrapper .ts-control .item:hover {
        background-color: #d1d5db; /* gray-300 */
    }
</style>


