<div id="bulkActions" class="hidden mb-4 p-4 bg-red-600 text-white rounded-lg flex flex-col sm:flex-row justify-between items-stretch sm:items-center gap-3 shadow-lg">
    <span id="selectedCount" class="font-bold text-sm sm:text-base">0 buku dipilih</span>
    <button onclick="openDeleteModal()" class="bg-white text-red-600 px-4 py-2 rounded-md font-bold hover:bg-gray-100 transition whitespace-nowrap text-sm sm:text-base">
        üóëÔ∏è Hapus Sekarang
    </button>
</div>

<div id="importModal" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

        <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all w-full max-w-lg mx-auto p-4 sm:p-6 relative">
            <h3 class="text-lg font-bold mb-4">Import Buku via Excel</h3>
            
            <form action="/admin/books/import" method="POST" enctype="multipart/form-data" id="importForm">
                <div id="dropZone" class="border-2 border-dashed border-gray-300 rounded-lg p-10 text-center cursor-pointer hover:bg-gray-50 transition">
                    <p class="text-gray-600">Drag & drop file Excel di sini atau <b>Klik untuk memilih</b></p>
                    <input type="file" name="excelFile" id="fileInput" class="hidden" accept=".xlsx, .xls">
                    <p id="fileName" class="mt-2 text-blue-600 font-medium"></p>
                </div>
                
                <div class="mt-6 flex justify-end gap-2">
                    <button type="button" onclick="toggleModal('importModal')" class="px-4 py-2 bg-gray-200 rounded-md">Batal</button>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md">Mulai Import</button>
                </div>
            </form>
        </div>
    </div>
</div>

<form action="/admin/books" method="GET" class="mb-6 flex flex-col sm:flex-row items-stretch sm:items-center gap-2">
    <input 
        type="text" 
        name="q" 
        value="<%= typeof q !== 'undefined' ? q : '' %>" 
        placeholder="Cari buku..." 
        class="border p-2 rounded flex-1"
    >
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 whitespace-nowrap">
        Cari
    </button>
</form>

<div class="overflow-x-auto">
<table class="min-w-full bg-white rounded-lg shadow overflow-hidden">
    <thead class="bg-gray-100 text-left">
        <tr>
            <th class="p-2 sm:p-4">
                <span class="no-label">No</span>
            </th>
            <th class="p-2 sm:p-4 hidden sm:table-cell">Gambar</th>
            <th class="p-2 sm:p-4">Judul</th>
            <th class="p-2 sm:p-4 hidden md:table-cell">Pengarang</th>
            <th class="p-2 sm:p-4 hidden lg:table-cell">Kategori</th>
            <th class="p-2 sm:p-4">Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% if (books.length === 0) { %>
            <tr><td colspan="6" class="p-4 text-center text-gray-500">Belum ada buku.</td></tr>
        <% } else { %>
            <% books.forEach((book, index) => { %>
            <tr class="border-t hover:bg-gray-50">
                <td class="p-2 sm:p-4 flex items-center gap-2">
                    <input type="checkbox" name="bookIds" value="<%= book.id %>" class="delete-checkbox hidden cursor-pointer" onchange="updateBulkPanel()">
                    <span class="text-sm sm:text-base"><%= (currentPage - 1) * limit + index + 1 %></span>
                </td>
                <td class="p-2 sm:p-4 hidden sm:table-cell">
                    <div class="w-12 h-16 sm:w-16 sm:h-24 border border-gray-200 bg-gray-50 flex items-center justify-center overflow-hidden">
                        <% if (book.image) { %><img src="/image/uploads/<%= book.image %>" class="w-full h-full object-cover">
                        <% } else { %><div class="text-center text-gray-400 p-1"><p style="font-size: 0.5rem;" class="font-serif leading-tight font-bold text-center">SAMPUL<br>BELUM<br>TERSEDIA</p></div><% } %>
                    </div>
                </td>
                <td class="p-2 sm:p-4 font-medium text-sm sm:text-base">
                    <div class="sm:hidden mb-2">
                        <div class="w-16 h-20 border border-gray-200 bg-gray-50 flex items-center justify-center overflow-hidden mb-2">
                            <% if (book.image) { %>
                                <img src="/image/uploads/<%= book.image %>" class="w-full h-full object-cover">
                            <% } else { %>
                                <div class="text-center text-gray-400 p-1">
                                    <p style="font-size: 0.5rem;" class="font-serif leading-tight font-bold text-center">SAMPUL<br>BELUM<br>TERSEDIA</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <div class="font-semibold mb-1"><%= book.title %></div>
                    <div class="text-xs text-gray-600 sm:hidden">
                        <div><strong>Pengarang:</strong> <%= book.Authors.map(a => a.name).join(', ') || '-' %></div>
                        <div><strong>Kategori:</strong> <%= book.Category ? book.Category.name : '-' %></div>
                    </div>
                </td>
                <td class="p-2 sm:p-4 text-sm text-gray-600 hidden md:table-cell"><%= book.Authors.map(a => a.name).join(', ') || '-' %></td>
                <td class="p-2 sm:p-4 text-sm hidden lg:table-cell"><%= book.Category ? book.Category.name : '-' %></td>
                <td class="p-2 sm:p-4 text-sm">
                    <div class="flex flex-col sm:flex-row gap-1 sm:gap-0">
                        <a href="/admin/books/edit/<%= book.id %>" class="text-blue-600 hover:underline text-xs sm:text-sm">Edit</a>
                        <span class="hidden sm:inline">|</span>
                        <a href="/admin/books/delete/<%= book.id %>" onclick="return confirm('Yakin hapus buku ini?')" class="text-red-600 hover:underline text-xs sm:text-sm">Hapus</a>
                    </div>
                </td>
            </tr>
            <% }) %>
        <% } %>
    </tbody>
</table>
</div>

<div id="deleteModal" class="fixed inset-0 z-[80] hidden overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4 text-center">
        <div class="fixed inset-0 bg-black opacity-60" onclick="toggleModal('deleteModal')"></div>
        <div class="inline-block align-bottom bg-white rounded-xl text-left overflow-hidden shadow-2xl transform transition-all w-full max-w-lg mx-auto p-4 sm:p-6 relative">
            <div class="text-center">
                <i class="fas fa-exclamation-triangle text-red-500 text-5xl mb-4"></i>
                <h3 id="deleteModalTitle" class="text-xl font-bold text-gray-900 mb-2">Konfirmasi Hapus</h3>
                <p id="deleteModalDesc" class="text-gray-500 mb-6 text-sm font-medium">Tindakan ini tidak bisa dibatalkan.</p>
                <p class="text-xs font-bold text-red-600 uppercase tracking-widest mb-2">Ketik kalimat di bawah ini:</p>
                <p id="textToType" class="font-mono bg-gray-100 p-3 rounded-lg mb-4 text-red-600 font-bold text-lg select-none shadow-inner border border-gray-200">HAPUS DATA</p>
                <input type="text" id="confirmInput" class="w-full border-2 border-gray-300 p-3 rounded-xl focus:border-red-500 outline-none text-center" placeholder="Ketik di sini...">
            </div>
            <div class="mt-8 flex justify-center gap-3">
                <button type="button" onclick="toggleModal('deleteModal')" class="px-6 py-2.5 bg-gray-100 text-gray-700 rounded-lg font-bold hover:bg-gray-200 transition">Batal</button>
                <button id="btnFinalDelete" disabled class="px-8 py-2.5 bg-red-600 text-white rounded-lg font-bold opacity-50 cursor-not-allowed transition hover:bg-red-700">Hapus Selamanya</button>
            </div>
        </div>
    </div>
</div>

        <% if (totalPages > 1) { %>
            <div class="mt-8 flex flex-wrap justify-center items-center gap-1">
                    <% if (currentPage > 1) { %>
                        <a href="/admin/books?q=<%= typeof q !== 'undefined' ? q : '' %>&page=<%= parseInt(currentPage) - 1 %>"
                        class="px-3 py-1 border rounded text-sm bg-white text-gray-600 hover:bg-blue-50">
                        <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>

                    <% 
                        let delta = 2; // Menampilkan 2 halaman di kiri dan 2 di kanan active page
                        let left = parseInt(currentPage) - delta;
                        let right = parseInt(currentPage) + delta;
                        let range = [];
                        let rangeWithDots = [];
                        let l;

                        for (let i = 1; i <= totalPages; i++) {
                            if (i == 1 || i == totalPages || (i >= left && i <= right)) {
                                range.push(i);
                            }
                        }

                        for (let i of range) {
                            if (l) {
                                if (i - l === 2) {
                                    rangeWithDots.push(l + 1);
                                } else if (i - l !== 1) {
                                    rangeWithDots.push('...');
                                }
                            }
                            rangeWithDots.push(i);
                            l = i;
                        }
                    %>

                    <% rangeWithDots.forEach(i => { %>
                        <% if (i === '...') { %>
                            <span class="px-3 py-1 text-gray-400">...</span>
                        <% } else { %>
                            <a href="/admin/books?q=<%= typeof q !== 'undefined' ? q : '' %>&page=<%= i %>"
                            class="px-3 py-1 border rounded text-sm transition-colors <%= currentPage == i ? 'bg-blue-600 text-white border-blue-600 font-bold' : 'bg-white text-gray-600 hover:bg-blue-50' %>">
                                <%= i %>
                            </a>
                        <% } %>
                    <% }) %>

                    <% if (currentPage < totalPages) { %>
                        <a href="/admin/books?q=<%= typeof q !== 'undefined' ? q : '' %>&page=<%= parseInt(currentPage) + 1 %>"
                        class="px-3 py-1 border rounded text-sm bg-white text-gray-600 hover:bg-blue-50">
                        <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>

                </div>
            <% } %>

<script>
    function toggleModal(id) {
        document.getElementById(id).classList.toggle('hidden');
    }

    let isAllDatabaseSelected = false;

    // FUNGSI TOGGLE MODE HAPUS
    function toggleDeleteMode() {
        const checkboxes = document.querySelectorAll('.delete-checkbox');
        const btn = document.getElementById('btnDeleteMode');
        const btnDB = document.getElementById('btnSelectAllDatabase');
        
        checkboxes.forEach(cb => cb.classList.toggle('hidden'));

        if (btn.classList.contains('bg-red-100')) {
            // Mode Aktif
            btn.classList.replace('bg-red-100', 'bg-red-600');
            btn.classList.replace('text-red-600', 'text-white');
            btn.innerHTML = '<i class="fas fa-times mr-2"></i> Matikan Mode Hapus';
            btnDB.classList.remove('hidden'); 
        } else {
            // Mode Mati (RESET DI SINI)
            btn.classList.replace('bg-red-600', 'bg-red-100');
            btn.classList.replace('text-white', 'text-red-600');
            btn.innerHTML = '<i class="fas fa-edit mr-2"></i> Mode Hapus Massal';
            btnDB.classList.add('hidden'); 
            
            // RESET LOGIC
            isAllDatabaseSelected = false;
            
            // Uncheck semua checkbox buku
            const bookCheckboxes = document.getElementsByName('bookIds');
            bookCheckboxes.forEach(c => {
                c.checked = false;
            });

            // Sembunyikan panel merah
            updateBulkPanel();
        }
    }

    function selectAllDatabase() {
        if (!isAllDatabaseSelected) {
            isAllDatabaseSelected = true;
            
            const checkboxes = document.getElementsByName('bookIds');
            checkboxes.forEach(c => {
                c.checked = true; 
            });
            
            const btnDB = document.getElementById('btnSelectAllDatabase');
            btnDB.classList.replace('bg-orange-100', 'bg-orange-600');
            btnDB.classList.replace('text-orange-600', 'text-white');
            btnDB.innerHTML = '<i class="fas fa-undo mr-2"></i> Batalkan Pilihan Seluruh Data';

        } else {
            isAllDatabaseSelected = false;
            
            const checkboxes = document.getElementsByName('bookIds');
            checkboxes.forEach(c => {
                c.checked = false; 
            });

            const btnDB = document.getElementById('btnSelectAllDatabase');
            btnDB.classList.replace('bg-orange-600', 'bg-orange-100');
            btnDB.classList.replace('text-white', 'text-orange-600');
            btnDB.innerHTML = '<i class="fas fa-database mr-2"></i> Pilih Seluruh Data Buku (<%= totalTitle %>)';
        }
        
        updateBulkPanel();
    }

    // FUNGSI UPDATE TAMPILAN PANEL MERAH
    function updateBulkPanel() {
        const checkboxes = document.getElementsByName('bookIds');
        const checked = Array.from(checkboxes).filter(c => c.checked);
        const panel = document.getElementById('bulkActions');
        const countLabel = document.getElementById('selectedCount');
        const totalTitleInDB = parseInt("<%= totalTitle %>");

        if (checked.length > 0 || isAllDatabaseSelected) {
            panel.classList.remove('hidden');
            
            if (isAllDatabaseSelected) {
                const uncheckedInPage = checkboxes.length - checked.length;
                const finalCount = totalTitleInDB - uncheckedInPage;
                
                if (uncheckedInPage > 0) {
                    countLabel.innerText = finalCount + ' buku dipilih';
                } else {
                    countLabel.innerText = 'SELURUH data buku (' + totalTitleInDB + ' judul) dipilih';
                }
            } else {
                countLabel.innerText = checked.length + ' buku dipilih';
            }
        } else {
            panel.classList.add('hidden');
        }
    }

    // KONFIRMASI INPUT KETIK
    document.getElementById('confirmInput').addEventListener('input', function(e) {
        const btn = document.getElementById('btnFinalDelete');
        const target = document.getElementById('textToType').innerText;
        if (e.target.value === target) {
            btn.disabled = false;
            btn.classList.remove('opacity-50', 'cursor-not-allowed');
        } else {
            btn.disabled = true;
            btn.classList.add('opacity-50', 'cursor-not-allowed');
        }
    });

    // BUKA MODAL HAPUS
    function openDeleteModal() {
        const title = document.getElementById('deleteModalTitle');
        const desc = document.getElementById('deleteModalDesc');
        const targetText = document.getElementById('textToType');
        
        if (isAllDatabaseSelected) {
            title.innerText = "PERINGATAN: HAPUS SELURUH DATABASE";
            desc.innerText = "Anda akan menghapus seluruh judul buku di sistem (Total: <%= totalTitle %> judul).";
            targetText.innerText = "HAPUS SEMUA";
        } else {
            const count = document.querySelectorAll('input[name="bookIds"]:checked').length;
            title.innerText = "Konfirmasi Hapus Massal";
            desc.innerText = "Anda akan menghapus " + count + " buku yang dipilih.";
            targetText.innerText = "HAPUS DATA";
        }

        document.getElementById('confirmInput').value = "";
        document.getElementById('btnFinalDelete').disabled = true;
        toggleModal('deleteModal');
    }

    // PROSES HAPUS FINAL
    document.getElementById('btnFinalDelete').addEventListener('click', function() {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/books/delete-multiple';

        if (isAllDatabaseSelected) {
            const inputAll = document.createElement('input');
            inputAll.type = 'hidden'; inputAll.name = 'deleteAll'; inputAll.value = 'true';
            form.appendChild(inputAll);

            const uncheckedIds = Array.from(document.querySelectorAll('input[name="bookIds"]:not(:checked)')).map(cb => cb.value);
            uncheckedIds.forEach(id => {
                const input = document.createElement('input');
                input.type = 'hidden'; input.name = 'excludeIds'; input.value = id;
                form.appendChild(input);
            });

            const conf = document.createElement('input');
            conf.type = 'hidden'; conf.name = 'confirmation'; conf.value = 'HAPUS SEMUA';
            form.appendChild(conf);
        } else {
            const selectedIds = Array.from(document.querySelectorAll('input[name="bookIds"]:checked')).map(cb => cb.value);
            selectedIds.forEach(id => {
                const input = document.createElement('input');
                input.type = 'hidden'; input.name = 'bookIds'; input.value = id;
                form.appendChild(input);
            });
            const conf = document.createElement('input');
            conf.type = 'hidden'; conf.name = 'confirmation'; conf.value = 'HAPUS DATA';
            form.appendChild(conf);
        }
        document.body.appendChild(form);
        form.submit();
    });

    // LOGIKA DRAG DROP IMPORT
    const dropZone = document.getElementById('dropZone');
    const fileInput = document.getElementById('fileInput');
    const fileNameDisplay = document.getElementById('fileName');
    if(dropZone) {
        dropZone.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) fileNameDisplay.innerText = "File: " + fileInput.files[0].name;
        });
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, e => { e.preventDefault(); e.stopPropagation(); }, false);
        });
        dropZone.addEventListener('drop', (e) => {
            const files = e.dataTransfer.files;
            if (files.length) {
                fileInput.files = files; 
                fileNameDisplay.innerText = "File siap: " + files[0].name;
            }
        });
    }
</script>
