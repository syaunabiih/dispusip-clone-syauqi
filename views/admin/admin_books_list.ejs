<%- include('partials/header', { title: 'Daftar Buku', active: 'home' }) %>

<h1 class="text-2xl font-bold mb-6">ðŸ“š Daftar Buku</h1>

<div class="mb-6 grid grid-cols-1 sm:grid-cols-2 gap-4 justify-center">

    <!-- Total Judul Buku -->
    <div class="bg-white rounded-xl shadow p-6 flex items-center gap-4">
        <div class="bg-blue-100 text-blue-600 p-3 rounded-full text-xl">
            ðŸ“š
        </div>
        <div>
            <p class="text-gray-500 text-sm">Total Judul</p>
            <p class="text-2xl font-bold">
                <%= totalTitle || 0 %>
            </p>
        </div>
    </div>

    <!-- Total Buku Fisik -->
    <div class="bg-white rounded-xl shadow p-6 flex items-center gap-4">
        <div class="bg-green-100 text-green-600 p-3 rounded-full text-xl">
            ðŸ“–
        </div>
        <div>
            <p class="text-gray-500 text-sm">Total Buku</p>
            <p class="text-2xl font-bold">
                <%= totalBook || 0 %>
            </p>
        </div>
    </div>

</div>

<!-- SEARCH -->
<form action="/admin/books" method="GET" class="mb-6 flex items-center gap-2">
    <input 
        type="text" 
        name="q" 
        value="<%= typeof q !== 'undefined' ? q : '' %>" 
        placeholder="Cari buku..." 
        class="border p-2 rounded w-full"
    >
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Cari
    </button>
</form>

<table class="min-w-full bg-white rounded-lg shadow overflow-hidden">
    <thead class="bg-gray-100 text-left">
        <tr>
            <th class="p-4">No</th>
            <th class="p-4">Judul</th>
            <th class="p-4">Pengarang</th>
            <th class="p-4">Kategori</th>
            <th class="p-4">Aksi</th>
        </tr>
    </thead>

    <tbody>
        <% if (books.length === 0) { %>
            <tr>
                <td colspan="5" class="p-4 text-center text-gray-500">
                    Belum ada buku.
                </td>
            </tr>
        <% } else { %>
            <% books.forEach((book, index) => { %>
            <tr class="border-t hover:bg-gray-50">
                <td class="p-4"><%= index + 1 %></td>
                <td class="p-4"><%= book.title %></td>
                <td class="p-4">
                    <% if (book.Authors && book.Authors.length > 0) { %>
                        <%= book.Authors.map(a => a.name).join(', ') %>
                    <% } else { %>
                        -
                    <% } %>
                </td>
                <td class="p-4">
                    <% if (book.Category) { %>
                        <%= book.Category.name %>
                    <% } else { %>
                        -
                    <% } %>
                </td>
                <td class="p-4">
                    <a href="/admin/books/edit/<%= book.id %>" class="text-blue-600 hover:underline">Edit</a> |
                    <a href="/admin/books/delete/<%= book.id %>" 
                        onclick="return confirm('Apakah yakin ingin menghapus buku ini?');" 
                        class="text-red-600 hover:underline">
                        Hapus
                    </a>
                </td>
            </tr>
            <% }) %>
        <% } %>
        </tbody>
</table>
<%- include('partials/footer') %>