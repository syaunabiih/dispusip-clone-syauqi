    <form action="/admin/books/edit/<%= book.id %>" method="POST" enctype="multipart/form-data"
        class="bg-white p-4 sm:p-6 rounded-lg shadow space-y-4 sm:space-y-6">
        <input type="hidden" name="origin_q" value="<%= query.origin_q %>">
        <input type="hidden" name="origin_searchBy" value="<%= query.origin_searchBy %>">
        <input type="hidden" name="origin_matchType" value="<%= query.origin_matchType %>">
        <input type="hidden" name="origin_category" value="<%= query.origin_category %>">
        <input type="hidden" name="origin_subject" value="<%= query.origin_subject %>">
        <input type="hidden" name="origin_year" value="<%= query.origin_year %>">
        <input type="hidden" name="origin_page" value="<%= query.origin_page %>">

        <!-- ================= INFORMASI DASAR ================= -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
            <div class="space-y-4">
                <div>
                    <label class="font-medium">Judul <span class="text-red-500">*</span></label>
                    <input type="text" name="title" value="<%= book.title %>" required
                        class="w-full p-2 border rounded">
                </div>

                <div>
                    <label class="font-medium">Edisi</label>
                    <input type="text" name="edition" value="<%= book.edition %>" class="w-full p-2 border rounded">
                </div>

                <div>
                    <label class="font-medium">Tahun Terbit</label>
                    <input type="text" name="publish_year" maxlength="4" value="<%= book.publish_year %>"
                        class="w-full p-2 border rounded">
                </div>

                <div>
                    <label class="font-medium">Tempat Terbit</label>
                    <input type="text" name="publish_place" value="<%= book.publish_place %>"
                        class="w-full p-2 border rounded">
                </div>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="font-medium">Deskripsi Fisik</label>
                    <input type="text" name="physical_description" value="<%= book.physical_description %>"
                        class="w-full p-2 border rounded">
                </div>

                <div>
                    <label class="font-medium">ISBN</label>
                    <input type="text" name="isbn" value="<%= typeof book !== 'undefined' ? book.isbn : '' %>"
                        class="w-full p-2 border rounded">
                </div>
                <div>
                    <label class="font-medium">Nomor Panggil <span class="text-red-500">*</span></label>
                    <input type="text" name="call_number"
                        value="<%= typeof book !== 'undefined' ? book.call_number : '' %>" required
                        class="w-full p-2 border rounded">
                </div>
            </div>
        </div>

        <!-- ================= ABSTRAK & CATATAN ================= -->
        <div>
            <label class="font-medium">Abstrak</label>
            <textarea name="abstract" rows="4" class="w-full p-2 border rounded"><%= book.abstract %></textarea>
        </div>

        <div>
            <label class="font-medium">Catatan</label>
            <textarea name="notes" rows="3" class="w-full p-2 border rounded"><%= book.notes %></textarea>
        </div>

        <!-- ================= AUTHOR & PUBLISHER ================= -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 mt-4">
            <div>
                <label class="font-medium">Penulis <span class="text-red-500">*</span></label>
                <select name="authors_penulis[]" id="penulis-select" class="w-full p-2 border rounded" multiple
                    required>
                    <% authors.forEach(a=> { %>
                        <option value="<%= a.id %>" <%=book.Authors.some(ba=> ba.id === a.id && ba.BookAuthor.role ===
                            'penulis') ? 'selected' : '' %>>
                            <%= a.name %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <div>
                <label class="font-medium">Editor</label>
                <select name="authors_editor[]" id="editor-select" class="w-full p-2 border rounded" multiple>
                    <% authors.forEach(a=> { %>
                        <option value="<%= a.id %>" <%=book.Authors.some(ba=> ba.id === a.id && ba.BookAuthor.role ===
                            'editor') ? 'selected' : '' %>>
                            <%= a.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 mt-4">
            <div>
                <label class="font-medium">Penanggung Jawab</label>
                <select name="authors_pj[]" id="pj-select" class="w-full p-2 border rounded" multiple>
                    <% authors.forEach(a=> { %>
                        <option value="<%= a.id %>" <%=book.Authors.some(ba=> ba.id === a.id && ba.BookAuthor.role ===
                            'penanggung jawab') ? 'selected' : '' %>>
                            <%= a.name %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <div>
                <label class="font-medium">Penerbit<span class="text-red-500">*</span></label>
                <select name="publishers" id="publisher-select" class="w-full p-2 border rounded" required>
                    <% publishers.forEach(p=> { %>
                        <option value="<%= p.id %>" <%=book.Publishers.some(bp=> bp.id === p.id) ? 'selected' : '' %>>
                            <%= p.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
        </div>

        <!-- ================= KATEGORI & SUBJEK ================= -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
            <div>
                <label class="font-medium">Kategori <span class="text-red-500">*</span></label>
                <select name="category_id" id="category-select" class="w-full p-2 border rounded" required>
                    <% categories.forEach(c=> { %>
                        <option value="<%= c.id %>" <%=book.Category?.id===c.id ? 'selected' : '' %>>
                            <%= c.name %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <div>
                <label class="font-medium">Subjek <span class="text-red-500">*</span></label>
                <select name="subjects[]" id="subject-select" class="w-full p-2 border rounded" multiple required>
                    <% subjects.forEach(s=> { %>
                        <option value="<%= s.id %>" <%=book.Subjects.some(bs=> bs.id === s.id) ? 'selected' : '' %>>
                            <%= s.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
        </div>

        <!-- ================= INFORMASI LAIN ================= -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
            <div>
                <label class="font-medium">Bahasa</label>
                <input type="text" name="language" value="<%= book.language %>" class="w-full p-2 border rounded">
            </div>
        </div>

        <!-- LOKASI RAK (POPUP MAP) -->
        <div>
            <label class="font-medium mb-2 block">Lokasi Rak</label>
            <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
                <input type="hidden" name="shelf_location" id="shelf_location" value="<%= book.shelf_location || '' %>">
