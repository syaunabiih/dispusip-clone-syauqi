                    <%= book.Authors.some(ba => ba.id === a.id && ba.BookAuthor.role === 'penulis') ? 'selected' : '' %>>
                    <%= a.name %>
                </option>
            <% }) %>
        </select>
    </div>

    <div>
        <label class="font-medium">Editor</label>
        <select name="authors_editor[]" id="editor-select" class="w-full p-2 border rounded" multiple>
            <% authors.forEach(a => { %>
                <option value="<%= a.id %>" 
                    <%= book.Authors.some(ba => ba.id === a.id && ba.BookAuthor.role === 'editor') ? 'selected' : '' %>>
                    <%= a.name %>
                </option>
