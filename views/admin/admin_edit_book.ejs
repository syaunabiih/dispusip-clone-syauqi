<form 
    action="/admin/books/edit/<%= book.id %>" 
    method="POST" 
    enctype="multipart/form-data"
    class="bg-white p-4 sm:p-6 rounded-lg shadow space-y-4 sm:space-y-6"
>
<input type="hidden" name="origin_q" value="<%= query.origin_q %>">
