    document.querySelector('form').addEventListener('submit', async function(e) {
        e.preventDefault(); 

        const form = e.target;
        const formData = new FormData(form);

        // Pastikan file benar-benar ditambahkan ke FormData
        const coverInput = document.getElementById('cover-input');
        if (coverInput && coverInput.files.length > 0) {
            // Pastikan file ditambahkan ke FormData (meskipun input tersembunyi)
            // FormData(form) seharusnya sudah mengambil file, tapi kita pastikan lagi
            formData.set('image', coverInput.files[0]);
            console.log('‚úì File ditambahkan ke FormData:', coverInput.files[0].name);
        } else {
            // Tidak ada file baru, hapus dari FormData jika ada
            formData.delete('image');
            console.log('‚úì Tidak ada file baru, hapus image dari FormData');
        }

        // === TAMBAHAN VALIDASI DI SINI ===
        const title = formData.get('title');
        const isbn = formData.get('isbn');
        const callNumber = formData.get('call_number');
        const category = formData.get('category_id');
        const shelf = formData.get('shelf_location');
        const noInduk = formData.get('no_induk');
        
        // Cek multiple selects (Penulis & Penerbit)
        const penulis = form.querySelector('#penulis-select').value;
        const penerbit = form.querySelector('#publisher-select').value;

        if (!title || !isbn || !callNumber || !category || !shelf || !noInduk || !penulis || !penerbit) {
            Swal.fire({
                icon: 'warning',
                title: 'Data Belum Lengkap',
                text: 'Judul, ISBN, No Panggil, Kategori, Lokasi Rak, No Induk, Penulis, dan Penerbit wajib diisi!',
                confirmButtonColor: '#3b82f6'
            });
            return; // Berhenti di sini, tidak lanjut ke proses Fetch
        }
        // === AKHIR TAMBAHAN VALIDASI ===

        // Debug: Cek apakah file ada di FormData
        const imageFile = formData.get('image');
        console.log('=== DEBUG FORM SUBMIT ===');
        console.log('File yang akan dikirim:', imageFile ? `${imageFile.name} (${imageFile.size} bytes)` : 'Tidak ada file');
        console.log('Remove image flag:', formData.get('remove_image'));
        console.log('Cover input files:', coverInput ? coverInput.files.length : 'Input tidak ditemukan');
        if (coverInput && coverInput.files.length > 0) {
            console.log('File di input:', coverInput.files[0].name);
        }
        console.log('========================');
        
        Swal.fire({
            title: 'Menyimpan perubahan...',
            allowOutsideClick: false,
            didOpen: () => { Swal.showLoading(); }
        });

        try {
            const response = await fetch(form.action, {
                method: 'POST',
                body: formData
                // Jangan set Content-Type header, biarkan browser set otomatis dengan boundary untuk multipart/form-data
            });

            const result = await response.json();

            if (response.ok && result.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Berhasil!',
                    text: 'Data buku telah diperbarui.',
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = result.redirectUrl;
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Gagal Update',
                    text: result.message || 'Terjadi kesalahan sistem.',
                    confirmButtonColor: '#3b82f6'
                });
            }
        } catch (error) {
            console.error(error);
            Swal.fire('Error', 'Gagal terhubung ke server.', 'error');
        }
    });
