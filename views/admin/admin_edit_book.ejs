                    <!-- Header Modal -->
                    <div
                        class="bg-gradient-to-r from-gray-50 to-gray-100 px-4 sm:px-6 md:px-8 py-3 sm:py-4 border-b border-gray-200 flex-shrink-0">
                        <h3
                            class="font-bold text-gray-800 text-base sm:text-lg flex items-center justify-center sm:justify-start">
                            <i class="fas fa-map-marked-alt text-blue-600 mr-2 text-lg sm:text-xl"></i>
                            <span>Pilih Lokasi Rak</span>
                        </h3>
                    </div>
                    <!-- Body Modal (Map) -->
                    <div class="p-4 sm:p-5 md:p-6 flex-1 overflow-y-auto sm:overflow-y-visible min-h-0">
                        <p class="text-xs sm:text-sm text-gray-600 mb-4 text-center sm:text-left">
                            <i class="fas fa-info-circle text-blue-500 mr-1"></i>
                            Klik pada rak di denah di bawah ini untuk memilih lokasi rak buku.
                        </p>
                        <!-- Include map interaktif di dalam popup -->
                        <div id="shelf-map-popup-container" class="flex justify-center">
                            <%- include('partials/shelfMapInteractive', { inputFieldId: 'shelf_location' , isPopup:
                                true, layoutJson: typeof layoutJson !=='undefined' ? layoutJson : null, shelfLocation:
                                (book && book.shelf_location) ? book.shelf_location : '' }) %>
                        </div>
                    </div>
                    <!-- Footer Modal -->
                    <div
                        class="bg-gradient-to-r from-gray-50 to-gray-100 px-4 sm:px-6 md:px-8 py-3 sm:py-4 border-t border-gray-200 flex flex-col sm:flex-row justify-center sm:justify-end gap-3 flex-shrink-0">
                        <button type="button" id="cancel-shelf-map-btn"
                            class="w-full sm:w-auto px-5 sm:px-6 py-2.5 border-2 border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-100 hover:border-gray-400 active:scale-95 transition-all duration-200 ease-in-out shadow-sm hover:shadow-md">
                            <i class="fas fa-times mr-2"></i>Batal
                        </button>
                        <button type="button" id="confirm-shelf-map-btn"
                            class="w-full sm:w-auto px-5 sm:px-6 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg font-medium hover:from-blue-700 hover:to-blue-800 active:scale-95 transition-all duration-200 ease-in-out shadow-md hover:shadow-lg">
                            <i class="fas fa-check mr-2"></i>Simpan
