    <script>
        console.log('=== SCRIPT ADMIN_EDIT_BOOK DIMUAT ===');

        function initTomSelect(selector, placeholderText, isMultiple = true) {
            return new TomSelect(selector, {
                plugins: ['remove_button'],
                create: true,
                sortField: { field: "text", direction: "asc" },
                placeholder: placeholderText,
                allowEmptyOption: !isMultiple
            });
        }

        initTomSelect("#penulis-select", "Cari/tambah penulis...");
        initTomSelect("#editor-select", "Cari/tambah editor...");
        initTomSelect("#pj-select", "Cari/tambah penanggung jawab...");
        initTomSelect("#publisher-select", "Cari atau tambah penerbit...");
        initTomSelect("#subject-select", "Cari atau tambah subjek...");
        initTomSelect("#category-select", "Cari atau tambah kategori...");

        const removeExistingCoverBtn = document.getElementById('remove-existing-cover');
        const existingCover = document.getElementById('existing-cover');
        const coverInput = document.getElementById('cover-input');
        const coverPreview = document.getElementById('cover-preview');
        const coverFilename = document.getElementById('cover-filename');
        const removeNewCoverBtn = document.getElementById('remove-new-cover');

        // Handler untuk menghapus cover yang sudah ada
        const removeImageFlag = document.getElementById('remove-image-flag');
        if (removeExistingCoverBtn) {
            removeExistingCoverBtn.addEventListener('click', () => {
                if (existingCover) {
                    existingCover.remove();          // hapus nama file existing
                }
                if (coverInput) {
                    coverInput.classList.remove('hidden'); // munculkan input file
                    coverInput.value = "";           // reset input
                }
                // Set flag untuk menghapus gambar lama
                if (removeImageFlag) {
                    removeImageFlag.value = 'true';
                }
            });
        }

        // Handler untuk preview gambar baru yang di-upload
        if (coverInput) {
            coverInput.addEventListener('change', () => {
                if (!coverInput.files.length) return;

                // Sembunyikan existing cover jika ada
                if (existingCover) {
                    existingCover.classList.add('hidden');
                }

                // Reset flag remove_image karena ada file baru
                if (removeImageFlag) {
                    removeImageFlag.value = 'false';
                }

                // Tampilkan preview dengan nama file
                if (coverFilename) {
                    coverFilename.textContent = coverInput.files[0].name;
                }
                coverInput.classList.add('hidden');     // sembunyikan input
                if (coverPreview) {
                    coverPreview.classList.remove('hidden'); // tampilkan preview
                }
            });
        }

        // Handler untuk menghapus preview gambar baru
        if (removeNewCoverBtn) {
            removeNewCoverBtn.addEventListener('click', () => {
                if (coverInput) {
                    coverInput.value = "";                  // hapus file
                    coverInput.classList.remove('hidden');  // munculkan input
                }
                if (coverPreview) {
                    coverPreview.classList.add('hidden');   // sembunyikan preview
                }

                // Jika existing cover sudah dihapus, set flag remove_image
                if (existingCover && !existingCover.parentNode) {
                    if (removeImageFlag) {
                        removeImageFlag.value = 'true';
                    }
                } else if (existingCover && existingCover.parentNode) {
                    existingCover.classList.remove('hidden');
                }
            });
        }

        // ================= POPUP MAP RAK =================
        console.log('=== SETUP POPUP MAP RAK ===');
        const shelfMapModal = document.getElementById('shelf-map-modal');
        const openShelfMapBtn = document.getElementById('open-shelf-map-btn');
        const cancelShelfMapBtn = document.getElementById('cancel-shelf-map-btn');
        const confirmShelfMapBtn = document.getElementById('confirm-shelf-map-btn');
        const shelfLocationInput = document.getElementById('shelf_location');
        const shelfLocationText = document.getElementById('shelf-location-text');
        const shelfLocationDisplay = document.getElementById('shelf-location-display');

        console.log('shelfMapModal:', shelfMapModal);
        console.log('openShelfMapBtn:', openShelfMapBtn);
        console.log('shelfLocationInput:', shelfLocationInput);
        console.log('shelfLocationInput.value:', shelfLocationInput ? shelfLocationInput.value : 'N/A');

        // Variabel untuk menyimpan nilai sementara saat di popup
        let tempShelfLocation = '';
        // Flag untuk menandai apakah user sudah mengklik rak baru
        let userHasClickedNewRack = false;

        // Listen untuk event ketika user mengklik rak baru di map
        // Ini akan update tempShelfLocation agar tryHighlight tidak me-reset highlight ke nilai lama
        window.addEventListener('userClickedRack', function (e) {
            if (e.detail && e.detail.value) {
                const oldTempValue = tempShelfLocation;
                tempShelfLocation = e.detail.value;
                userHasClickedNewRack = true;
                console.log('üîÑ ========================================');
                console.log('üîÑ === userClickedRack EVENT DITERIMA ===');
                console.log('üîÑ ========================================');
                console.log('üîÑ tempShelfLocation di-update dari:', oldTempValue, 'ke:', tempShelfLocation);
                console.log('üîÑ userHasClickedNewRack di-set ke: true');
                console.log('üîÑ Ini mencegah tryHighlight me-reset highlight ke nilai lama');
                console.log('üîÑ ========================================');
            }
        });

        // Fungsi untuk update display lokasi rak
        function updateShelfLocationDisplay(value) {
            if (value && value.trim() !== '') {
                shelfLocationText.textContent = value;
                shelfLocationDisplay.classList.remove('bg-gray-50', 'text-gray-600');
                shelfLocationDisplay.classList.add('bg-blue-50', 'text-blue-800', 'font-medium');
            } else {
                shelfLocationText.textContent = 'Belum dipilih';
                shelfLocationDisplay.classList.remove('bg-blue-50', 'text-blue-800', 'font-medium');
                shelfLocationDisplay.classList.add('bg-gray-50', 'text-gray-600');
            }
        }

        // Fungsi untuk highlight rak secara langsung
        function highlightRackDirectly(value) {
            console.log('=== highlightRackDirectly DIPANGGIL ===');
            console.log('Nilai:', value);

            if (!value || !value.trim()) {
                console.log('Tidak ada nilai');
                return false;
            }

            const mapContainer = document.getElementById('shelf-map-container');
            if (!mapContainer) {
                console.error('Map container tidak ditemukan');
                return false;
            }

            const raw = String(value).replace(/['"]+/g, '').trim();
            if (!raw) return false;
            const noRak = raw.replace(/^Rak\s+/i, '').trim();
            const candidates = Array.from(new Set([raw, noRak].filter(Boolean)));

            const allRacks = mapContainer.querySelectorAll('[data-rack-id]');
            console.log('Jumlah rak ditemukan:', allRacks.length);

            // Log semua rak ID untuk debugging
            console.log('Daftar semua rak ID:');
            allRacks.forEach((rack, idx) => {
                const id = rack.getAttribute('data-rack-id');
                console.log(`  ${idx + 1}. "${id}" (length: ${id ? id.length : 0}, charCodes: ${id ? Array.from(id).map(c => c.charCodeAt(0)).join(',') : 'N/A'})`);
            });

            if (allRacks.length === 0) {
                console.warn('Tidak ada rak ditemukan di map');
                return false;
            }

            let found = false;
            allRacks.forEach((rack, index) => {
                let currentRackId = rack.getAttribute('data-rack-id');
                // Hapus tanda kutip ganda jika ada (char code 34)
                if (currentRackId) {
                    currentRackId = currentRackId.replace(/^["']+|["']+$/g, '').trim();
                }
                const currentRackIdClean = currentRackId ? currentRackId.replace(/\s/g, '').toUpperCase() : '';
                const isSelected = candidates.some(c => c.replace(/\s/g, '').toUpperCase() === currentRackIdClean);

                console.log(`Rak ${index + 1}: ID = "${rack.getAttribute('data-rack-id')}" (cleaned: "${currentRackIdClean}"), candidates: ${JSON.stringify(candidates)}, isSelected = ${isSelected}`);

                if (isSelected) {
                    found = true;
                    console.log('‚úì Menerapkan highlight pada rak:', currentRackId);

                    // Hapus semua class yang mungkin konflik
