<%- include('../partials/header') %>

<div class="flex flex-col gap-6">
    <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
            <i class="fas fa-users text-green-600"></i> <%= title %>
        </h2>
        
        <button onclick="openModal('modalAddInst')" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-semibold shadow flex items-center gap-2">
            <i class="fas fa-plus"></i> Tambah Lembaga
        </button>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Nama Lembaga</th>
                        <th scope="col" class="px-6 py-3">Kontak (PJ)</th>
                        <th scope="col" class="px-6 py-3 text-center">Buku Dipinjam</th>
                        <th scope="col" class="px-6 py-3 text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% institutions.forEach(inst => { %>
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="font-bold text-gray-800 text-base"><%= inst.name %></div>
                            <div class="text-xs text-gray-500 mt-1"><i class="fas fa-map-marker-alt text-red-400"></i> <%= inst.address %></div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="font-medium text-gray-700"><%= inst.contact_person %></div>
                            <div class="text-xs text-gray-400"><%= inst.phone %></div>
                        </td>
                        <td class="px-6 py-4 text-center">
                             <% if(inst.PuskelLoans && inst.PuskelLoans.length > 0) { %>
                                <span class="bg-blue-100 text-blue-800 text-xs font-bold px-2 py-1 rounded-full">
                                    <%= inst.PuskelLoans.length %> Buku
                                </span>
                            <% } else { %>
                                <span class="text-gray-300">-</span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <a href="/admin/puskel/institution/<%= inst.id %>" 
                                class="bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-1.5 rounded text-xs font-semibold flex items-center gap-1 mx-auto transition-colors w-fit border border-gray-300">
                                <i class="fas fa-eye"></i> Lihat Detail
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                    <% if (institutions.length === 0) { %>
                        <tr><td colspan="4" class="text-center py-8 text-gray-400">Belum ada data lembaga.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="modalAddInst" class="fixed inset-0 z-50 hidden flex items-center justify-center p-4">
    <div class="absolute inset-0 bg-gray-900 opacity-50" onclick="closeModal('modalAddInst')"></div>
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-md z-10 p-6 relative">
        <h3 class="text-lg font-bold mb-4 text-gray-800">Tambah Lembaga Baru</h3>
        <form action="/admin/puskel/institution/add" method="POST" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Nama Lembaga</label>
                <input type="text" name="name" required class="w-full border rounded p-2 text-sm focus:ring-blue-500" placeholder="Contoh: SDN 05 Padang">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Alamat</label>
                <input type="text" name="address" required class="w-full border rounded p-2 text-sm" placeholder="Alamat lengkap...">
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Penanggung Jawab</label>
                    <input type="text" name="contact_person" required class="w-full border rounded p-2 text-sm" placeholder="Nama PJ">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">No. HP</label>
                    <input type="text" name="phone" class="w-full border rounded p-2 text-sm" placeholder="0812...">
                </div>
            </div>
            <div class="flex justify-end gap-2 pt-2">
                <button type="button" onclick="closeModal('modalAddInst')" class="px-4 py-2 text-gray-600 bg-gray-100 rounded hover:bg-gray-200">Batal</button>
                <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">Simpan</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openModal(id) { document.getElementById(id).classList.remove('hidden'); }
    function closeModal(id) { document.getElementById(id).classList.add('hidden'); }
</script>

<%- include('../partials/footer') %>