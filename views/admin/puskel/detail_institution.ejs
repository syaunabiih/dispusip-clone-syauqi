<%- include('../partials/header') %>

<div class="flex flex-col gap-6">
    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
                <i class="fas fa-school text-blue-600"></i>
                <%= institution.name %>
            </h2>
            <p class="text-sm text-gray-500 mt-1">
                <i class="fas fa-map-marker-alt text-red-500"></i> <%= institution.address %> | 
                <i class="fas fa-user"></i> <%= institution.contact_person %> (<%= institution.phone %>)
            </p>
        </div>
        
        <div class="flex gap-2">
            <a href="/admin/puskel/borrowers" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm font-semibold hover:bg-gray-300 flex items-center gap-2">
                <i class="fas fa-arrow-left"></i> Kembali
            </a>
            
            <a href="/admin/puskel/institution/<%= institution.id %>/export" target="_blank" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-semibold shadow-sm flex items-center gap-2">
                <i class="fas fa-file-excel"></i> Export Excel
            </a>

            <a href="/admin/puskel/loan/select/<%= institution.id %>" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-semibold shadow-sm flex items-center gap-2">
                <i class="fas fa-plus"></i> Tambah Pinjaman
            </a>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
        <div class="p-4 border-b bg-gray-50 flex justify-between items-center">
            <h3 class="font-bold text-gray-700 flex items-center gap-2">
                <i class="fas fa-book-reader text-blue-500"></i> Buku Sedang Dipinjam
            </h3>
            <span class="bg-blue-100 text-blue-800 text-xs font-bold px-3 py-1 rounded-full border border-blue-200">
                Total: <%= institution.PuskelLoans ? institution.PuskelLoans.length : 0 %> Eks
            </span>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-center w-12">No</th>
                        <th class="px-6 py-3">Judul Buku</th>
                        <th class="px-6 py-3 text-center">No. Induk</th>
                        <th class="px-6 py-3 text-center">Tgl Pinjam</th>
                        <th class="px-6 py-3 text-center">Jatuh Tempo</th>
                        <th class="px-6 py-3 text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (institution.PuskelLoans && institution.PuskelLoans.length > 0) { %>
                        <% institution.PuskelLoans.forEach((loan, index) => { %>
                        <tr class="bg-white border-b hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 text-center font-medium text-gray-500">
                                <%= index + 1 %>
                            </td>
                            <td class="px-6 py-4">
                                <div class="font-bold text-gray-800 text-base">
                                    <%= (loan.bookCopy && loan.bookCopy.Book) ? loan.bookCopy.Book.title : 'Judul Error' %>
                                </div>
                                <div class="text-xs text-gray-400 mt-0.5">
                                    ISBN: <%= (loan.bookCopy && loan.bookCopy.Book) ? loan.bookCopy.Book.isbn : '-' %>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-center">
                                <span class="bg-gray-100 text-gray-800 font-mono text-xs font-bold px-2 py-1 rounded border border-gray-300">
                                    <%= loan.bookCopy ? loan.bookCopy.no_induk : '-' %>
                                </span>
                            </td>
                            <td class="px-6 py-4 text-center text-gray-600">
                                <%= new Date(loan.loan_date).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                            </td>
                            <td class="px-6 py-4 text-center font-medium text-red-600">
                                <%= new Date(loan.due_date).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                            </td>
                            <td class="px-6 py-4 text-center">
                                <form id="formReturn-<%= loan.id %>" action="/admin/puskel/return" method="POST">
                                    <input type="hidden" name="loan_id" value="<%= loan.id %>">
                                    <button type="button" onclick="showReturnModal('<%= loan.id %>', '<%= (loan.bookCopy && loan.bookCopy.Book) ? loan.bookCopy.Book.title.replace(/'/g, "\\'") : 'Buku' %>')" 
                                        class="text-green-600 hover:text-white hover:bg-green-600 border border-green-200 bg-green-50 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-xs px-3 py-1.5 text-center inline-flex items-center transition-all duration-200">
                                        <i class="fas fa-check mr-1"></i> Kembali
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-12 text-gray-400">
                                <div class="flex flex-col items-center justify-center gap-3">
                                    <i class="fas fa-inbox text-4xl text-gray-200"></i>
                                    <span>Tidak ada buku yang sedang dipinjam saat ini.</span>
                                    <a href="/admin/puskel/loan/select/<%= institution.id %>" class="text-blue-600 hover:underline text-sm mt-1">
                                        Klik untuk tambah pinjaman
                                    </a>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="modalReturnConfirmation" class="fixed inset-0 z-50 hidden flex items-center justify-center p-4">
    <div class="absolute inset-0 bg-gray-900 opacity-60 transition-opacity" onclick="closeReturnModal()"></div>
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md z-10 overflow-hidden transform transition-all scale-100 relative animate-fade-in-down">
        
        <div class="bg-white p-6 pb-0 flex justify-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center animate-bounce">
                <i class="fas fa-book-reader text-3xl text-green-600"></i>
            </div>
        </div>

        <div class="p-6 text-center">
            <h3 class="text-xl font-bold text-gray-800 mb-2">Konfirmasi Pengembalian</h3>
            <p class="text-gray-500 text-sm">
                Apakah Anda yakin buku <br>
                <span id="bookTitleConfirm" class="font-bold text-gray-800 block mt-1 text-base">"Judul Buku"</span> <br>
                sudah dikembalikan?
            </p>
        </div>

        <div class="bg-gray-50 p-4 flex gap-3 justify-center border-t border-gray-100">
            <button onclick="closeReturnModal()" class="px-5 py-2.5 bg-white text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-100 font-medium text-sm transition-colors focus:ring-2 focus:ring-gray-200">
                Batal
            </button>
            <button onclick="confirmReturnProcess()" class="px-5 py-2.5 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium text-sm shadow-md transition-colors focus:ring-2 focus:ring-green-400 flex items-center gap-2">
                <i class="fas fa-check"></i> Ya, Kembalikan
            </button>
        </div>
    </div>
</div>

<script>
    let currentLoanId = null;

    function showReturnModal(loanId, bookTitle) {
        currentLoanId = loanId;
        document.getElementById('bookTitleConfirm').innerText = `"${bookTitle}"`;
        document.getElementById('modalReturnConfirmation').classList.remove('hidden');
    }

    function closeReturnModal() {
        currentLoanId = null;
        document.getElementById('modalReturnConfirmation').classList.add('hidden');
    }

    function confirmReturnProcess() {
        if (currentLoanId) {
            const form = document.getElementById(`formReturn-${currentLoanId}`);
            if (form) {
                form.submit();
            }
        }
    }
</script>

<%- include('../partials/footer') %>