<%- include('../../partials/header') %>

<div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-800">
            <i class="fas fa-edit text-yellow-600 mr-2"></i> Edit Buku Puskel
        </h2>
        <a href="/admin/puskel" class="text-gray-600 hover:text-gray-800">
            <i class="fas fa-arrow-left"></i> Batal
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-md border border-gray-100 p-6">
        
        <form action="/admin/puskel/edit/<%= book.id %>" method="POST" enctype="multipart/form-data" class="space-y-6">
            
            <input type="hidden" name="origin_page" value="<%= query.page %>">
            <input type="hidden" name="origin_q" value="<%= query.q %>">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Judul Buku *</label>
                    <input type="text" name="title" value="<%= book.title %>" class="w-full border rounded-lg px-4 py-2 font-bold" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">ISBN</label>
                    <input type="text" name="isbn" value="<%= book.isbn %>" class="w-full border rounded-lg px-4 py-2">
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Kategori</label>
                    <input list="categoryList" name="category_id" value="<%= book.Category ? book.Category.name : '' %>" class="w-full border rounded-lg px-4 py-2" required>
                    <datalist id="categoryList">
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.name %>"></option>
                        <% }) %>
                    </datalist>
                </div>
                 <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Lokasi Rak</label>
                    <input type="text" name="shelf_location" value="<%= book.shelf_location %>" class="w-full border rounded-lg px-4 py-2">
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Penulis (Utama)</label>
                    <% 
                        const penulis = book.Authors ? book.Authors.filter(a => a.BookAuthor.role === 'penulis').map(a => a.name).join(', ') : '';
                    %>
                    <input type="text" name="authors_penulis" value="<%= penulis %>" class="w-full border rounded-lg px-4 py-2" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Penerbit</label>
                    <% 
                        const penerbit = book.Publishers ? book.Publishers.map(p => p.name).join(', ') : '';
                    %>
                    <input type="text" name="publishers" value="<%= penerbit %>" class="w-full border rounded-lg px-4 py-2" required>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Tahun</label>
                    <input type="number" name="publish_year" value="<%= book.publish_year %>" class="w-full border rounded-lg px-4 py-2">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">No. Panggil</label>
                    <input type="text" name="call_number" value="<%= book.call_number %>" class="w-full border rounded-lg px-4 py-2" required>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">No. Induk (Edit Hati-hati)</label>
                    <% 
                        const noInduks = book.copies ? book.copies.map(c => c.no_induk).join(', ') : '';
                    %>
                    <textarea name="no_induk" rows="1" class="w-full border rounded-lg px-4 py-2 bg-yellow-50"><%= noInduks %></textarea>
                </div>
            </div>
            
             <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Subjek</label>
                 <% 
                        const subjek = book.Subjects ? book.Subjects.map(s => s.name).join(', ') : '';
                    %>
                <input type="text" name="subjects" value="<%= subjek %>" class="w-full border rounded-lg px-4 py-2" required>
            </div>

            <% if(book.image) { %>
                <div class="flex items-center gap-4 py-2">
                    <img src="/image/uploads/<%= book.image %>" class="h-20 w-16 object-cover rounded border">
                    <label class="flex items-center gap-2 text-sm text-red-600">
                        <input type="checkbox" name="remove_image" value="true"> Hapus Gambar
                    </label>
                </div>
            <% } %>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Ganti Cover (Opsional)</label>
                <input type="file" name="image" class="w-full border rounded-lg px-4 py-2">
            </div>

            <div class="flex justify-end pt-4">
                <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-6 py-2 rounded-lg font-semibold shadow-sm">
                    <i class="fas fa-check mr-2"></i> Perbarui Data
                </button>
            </div>

        </form>
    </div>
</div>

<%- include('../../partials/footer') %>