<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Transisi halus untuk perubahan lebar konten */
        #mainContent {
            transition: margin-left 0.3s ease-in-out, width 0.3s ease-in-out;
        }
    </style>
</head>
<body class="bg-gray-100 flex min-h-screen overflow-x-hidden">

    <% 
        const safeActive = typeof active !== 'undefined' ? active : '';
        const safeTitle = typeof title !== 'undefined' ? title : '';
    %>

    <header class="fixed top-0 left-0 right-0 h-14 sm:h-16 bg-white shadow z-40 flex items-center justify-between px-3 sm:px-4">
        <div class="flex items-center flex-1 min-w-0">
            <button id="toggleSidebar" class="bg-blue-600 text-white p-2 rounded-md hover:bg-blue-700 transition-colors">
                <i class="fas fa-bars"></i>
            </button>
            <h1 class="ml-2 sm:ml-4 text-lg sm:text-xl font-semibold truncate text-gray-800 tracking-tight">
                <%= safeTitle %>
            </h1>
        </div>
        
        <a href="/logout" class="lg:hidden bg-red-500 text-white px-3 py-1.5 rounded-md text-xs font-semibold hover:bg-red-600 transition-colors">
            <i class="fas fa-sign-out-alt"></i>
        </a>
    </header>

    <aside id="sidebar" class="w-64 bg-white h-screen shadow-lg fixed flex flex-col justify-between transform transition-transform duration-300 ease-in-out z-30 lg:translate-x-0 -translate-x-full overflow-y-auto">
        <div class="flex-1 min-h-0">
            <div class="p-4 sm:p-6 border-b flex items-center gap-3">
                <div class="w-8 h-8 bg-blue-600 rounded flex items-center justify-center">
                    <i class="fas fa-user-shield text-white text-xs"></i>
                </div>
                <h1 class="text-base sm:text-lg font-bold text-blue-600 tracking-tighter">Admin Panel</h1>
            </div>

            <nav class="mt-4 px-3 space-y-1">
                <a href="/admin/super-dashboard" class="flex items-center gap-3 px-4 py-2.5 rounded-lg transition-all 
                    <%= safeActive === 'dashboard' ? 'bg-blue-100 text-blue-700 font-bold shadow-sm' : 'text-gray-600 hover:bg-blue-50' %>">
                    <i class="fas fa-chart-line w-5 text-center"></i>
                    <span>Dashboard</span>
                </a>

                <div class="pt-4 pb-2">
                    <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest px-4">Manajemen Ruangan</p>
                </div>

                <a href="/admin/rooms/add" class="flex items-center gap-3 px-4 py-2.5 rounded-lg transition-all
                    <%= safeActive === 'add-room' ? 'bg-blue-100 text-blue-700 font-bold shadow-sm' : 'text-gray-600 hover:bg-blue-50' %>">
                    <i class="fas fa-plus-circle w-5 text-center"></i>
                    <span>Tambah Ruangan</span>
                </a>

                <a href="/admin/rooms" class="flex items-center gap-3 px-4 py-2.5 rounded-lg transition-all
                    <%= safeActive === 'rooms' ? 'bg-blue-100 text-blue-700 font-bold shadow-sm' : 'text-gray-600 hover:bg-blue-50' %>">
                    <i class="fas fa-tasks w-5 text-center"></i>
                    <span>Kelola Ruangan</span>
                </a>
            </nav>
        </div>

        <div class="p-4 border-t hidden lg:block">
            <a href="/admin/logout"
            class="w-full flex items-center justify-center gap-2 py-2.5 bg-red-50 text-red-600 font-bold rounded-lg hover:bg-red-500 hover:text-white transition-all duration-200 text-sm">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    </aside>

    <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-20 hidden lg:hidden" onclick="toggleSidebar()"></div>

    <main id="mainContent" class="flex-1 min-w-0 p-4 sm:p-6 lg:p-8 mt-14 sm:mt-16 min-h-screen lg:ml-64 transition-all duration-300">

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const mainContent = document.getElementById('mainContent');
            
            if (window.innerWidth >= 1024) {
                // LOGIKA DESKTOP
                if (sidebar.classList.contains('lg:translate-x-0')) {
                    // TUTUP SIDEBAR
                    sidebar.classList.remove('lg:translate-x-0');
                    sidebar.classList.add('-translate-x-full');
                    // HAPUS MARGIN: Konten otomatis melebar karena sistem flex-1
                    mainContent.classList.remove('lg:ml-64');
                } else {
                    // BUKA SIDEBAR
                    sidebar.classList.add('lg:translate-x-0');
                    sidebar.classList.remove('-translate-x-full');
                    // TAMBAH MARGIN: Konten otomatis menyempit mengikuti sisa ruang
                    mainContent.classList.add('lg:ml-64');
                }
            } else {
                // LOGIKA MOBILE
                sidebar.classList.toggle('-translate-x-full');
                overlay.classList.toggle('hidden');
            }
        }
        document.getElementById('toggleSidebar').addEventListener('click', toggleSidebar);
    </script>