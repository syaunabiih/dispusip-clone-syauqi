<%- include('partials/header') %>
%> <div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">üè¢ Kelola Ruangan OPAC</h1>
        <a href="/admin/rooms/add" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg font-bold shadow transition flex items-center gap-2">
            <i class="fas fa-plus"></i> Tambah Ruangan
        </a>
    </div>

    <% if (typeof query !== 'undefined' && query.success) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
            <strong class="font-bold">Sukses!</strong> Data berhasil diproses.
        </div>
    <% } %>

    <div class="bg-white rounded-xl shadow border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">No</th>
                    <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Nama Ruangan</th>
                    <th class="px-6 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Admin Penanggung Jawab</th>
                    <th class="px-6 py-3 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">Aksi</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (rooms.length === 0) { %>
                    <tr><td colspan="4" class="px-6 py-8 text-center text-gray-500 italic">Belum ada data ruangan.</td></tr>
                <% } else { %>
                    <% rooms.forEach((room, index) => { %>
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= index + 1 %></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-bold text-gray-900"><%= room.nama_ruangan %></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center text-green-600 mr-3">
                                        <i class="fas fa-user-shield"></i>
                                    </div>
                                    <span class="text-sm font-medium text-gray-700"><%= room.admin ? room.admin.username : 'Tidak Ada' %></span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                <a href="/admin/rooms/edit/<%= room.id_ruangan %>" class="text-indigo-600 hover:text-indigo-900 mx-2" title="Edit">
                                    <i class="fas fa-edit text-lg"></i>
                                </a>
                                <a href="/admin/rooms/delete/<%= room.id_ruangan %>" onclick="return confirm('Yakin hapus ruangan ini? Admin terkait juga akan dihapus.')" class="text-red-600 hover:text-red-900 mx-2" title="Hapus">
                                    <i class="fas fa-trash text-lg"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>