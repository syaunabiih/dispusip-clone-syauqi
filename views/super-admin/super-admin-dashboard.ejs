<%- include('partials/header') %> 
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="p-6">
    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Dashboard Super Admin</h1>
            <p class="text-gray-500 mt-1">Selamat datang kembali, <span class="font-semibold text-blue-600"><%= user %></span>!</p>
        </div>
        <div class="flex gap-3">
            <span class="px-4 py-2 bg-blue-100 text-blue-700 rounded-lg text-sm font-medium flex items-center gap-2">
                <i class="fas fa-calendar-alt"></i> <%= new Date().toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
            </span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition-shadow">
            <div>
                <p class="text-gray-500 text-sm font-medium uppercase tracking-wider mb-1">Total Koleksi Buku</p>
                <h2 class="text-4xl font-extrabold text-gray-800"><%= stats.totalBooks %></h2>
                <a href="/admin/books" class="text-sm text-blue-600 hover:text-blue-700 font-medium mt-2 inline-block">
                    Lihat Katalog <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="w-16 h-16 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center text-3xl">
                <i class="fas fa-book"></i>
            </div>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition-shadow">
            <div>
                <p class="text-gray-500 text-sm font-medium uppercase tracking-wider mb-1">Admin Ruangan</p>
                <h2 class="text-4xl font-extrabold text-gray-800"><%= stats.totalUsers %></h2>
                <p class="text-xs text-green-600 mt-2 font-medium">
                    <i class="fas fa-check-circle"></i> Akun Aktif
                </p>
            </div>
            <div class="w-16 h-16 bg-green-50 text-green-600 rounded-2xl flex items-center justify-center text-3xl">
                <i class="fas fa-users-cog"></i>
            </div>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex items-center justify-between hover:shadow-md transition-shadow">
            <div>
                <p class="text-gray-500 text-sm font-medium uppercase tracking-wider mb-1">Total Ruangan OPAC</p>
                <h2 class="text-4xl font-extrabold text-gray-800"><%= stats.totalRuangan %></h2>
                <a href="/admin/rooms" class="text-sm text-purple-600 hover:text-purple-700 font-medium mt-2 inline-block">
                    Kelola Ruangan <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <div class="w-16 h-16 bg-purple-50 text-purple-600 rounded-2xl flex items-center justify-center text-3xl">
                <i class="fas fa-door-open"></i>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
            <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                <i class="fas fa-rocket text-yellow-500 mr-2"></i> Akses Cepat
            </h3>
            <div class="grid grid-cols-2 gap-4">
                <a href="/admin/rooms/add" class="p-4 bg-purple-50 rounded-xl hover:bg-purple-100 hover:text-purple-800 transition group border border-purple-100">
                    <div class="font-bold mb-1 flex items-center gap-2">
                        <i class="fas fa-plus-circle text-purple-600 group-hover:scale-110 transition-transform"></i> Tambah Ruangan
                    </div>
                    <p class="text-xs text-gray-500 group-hover:text-purple-700">Buat ruangan OPAC baru & akun adminnya</p>
                </a>

                <a href="/admin/rooms" class="p-4 bg-indigo-50 rounded-xl hover:bg-indigo-100 hover:text-indigo-800 transition group border border-indigo-100">
                    <div class="font-bold mb-1 flex items-center gap-2">
                        <i class="fas fa-list text-indigo-600 group-hover:scale-110 transition-transform"></i> Daftar Ruangan
                    </div>
                    <p class="text-xs text-gray-500 group-hover:text-indigo-700">Lihat dan edit data ruangan yang ada</p>
                </a>

                <a href="/admin/books" class="p-4 bg-blue-50 rounded-xl hover:bg-blue-100 hover:text-blue-800 transition group border border-blue-100">
                    <div class="font-bold mb-1 flex items-center gap-2">
                        <i class="fas fa-book text-blue-600 group-hover:scale-110 transition-transform"></i> Katalog Pusat
                    </div>
                    <p class="text-xs text-gray-500 group-hover:text-blue-700">Akses data buku seluruh ruangan</p>
                </a>

                <a href="/admin/dashboard" class="p-4 bg-orange-50 rounded-xl hover:bg-orange-100 hover:text-orange-800 transition group border border-orange-100">
                    <div class="font-bold mb-1 flex items-center gap-2">
                        <i class="fas fa-chart-pie text-orange-600 group-hover:scale-110 transition-transform"></i> Statistik Detail
                    </div>
                    <p class="text-xs text-gray-500 group-hover:text-orange-700">Lihat grafik kunjungan dan kategori</p>
                </a>
            </div>
        </div>

        <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex flex-col justify-center text-center">
            <div class="mb-6">
                <div class="inline-block p-4 bg-blue-100 rounded-full text-blue-600 mb-4 animate-pulse">
                    <i class="fas fa-server text-4xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-800">Status Sistem</h3>
                <p class="text-gray-500 text-sm">Sistem Referensi & OPAC Multi-Ruangan</p>
            </div>
            
            <div class="space-y-3 text-sm">
                <div class="flex justify-between px-8 py-3 border-b border-gray-100 hover:bg-gray-50 transition rounded-lg">
                    <span class="text-gray-600 font-medium">Status Server</span>
                    <span class="text-green-600 font-bold flex items-center gap-1"><i class="fas fa-check-circle"></i> Online</span>
                </div>
                <div class="flex justify-between px-8 py-3 border-b border-gray-100 hover:bg-gray-50 transition rounded-lg">
                    <span class="text-gray-600 font-medium">Database</span>
                    <span class="text-blue-600 font-bold flex items-center gap-1"><i class="fas fa-database"></i> Terhubung</span>
                </div>
                <div class="flex justify-between px-8 py-3 hover:bg-gray-50 transition rounded-lg">
                    <span class="text-gray-600 font-medium">Total Akun Admin</span>
                    <span class="text-gray-800 font-bold"><%= stats.totalUsers + 1 %> (Termasuk Anda)</span>
                </div>
            </div>
        </div>

    </div>
</div>