                    <div class="flex-1 md:overflow-y-auto md:max-h-[calc(100vh-250px)] md:pr-2">
            <!-- LIST BUKU -->
            <div class="space-y-4">
                <% if (books.length > 0) { %>
                    <% books.forEach(book => { %>
                        <a 
                                        href="/book/<%= book.id %>?origin_q=<%= query.q %>&origin_searchBy=<%= query.searchBy %>&origin_matchType=<%= query.matchType %>&origin_category=<%= query.category %>&origin_subject=<%= query.subject %>&origin_year=<%= query.year %>&origin_sortBy=<%= query.sortBy %>&origin_sortOrder=<%= query.sortOrder %>&origin_page=<%= currentPage %>"
