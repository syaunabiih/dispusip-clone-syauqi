                                <!-- Mobile: Compact Layout -->
                                <div class="block sm:hidden">
                                    <label class="text-[11px] font-semibold text-gray-700 flex items-center mb-2">
                                        <i class="fas fa-sort text-blue-600 mr-1.5 text-[10px]"></i> 
                                        <span>Urutkan:</span>
                                    </label>
                                    <div class="grid grid-cols-2 gap-2">
                                        <select id="sortBy" class="w-full px-2 py-1.5 bg-gray-50 border border-gray-300 rounded-md text-[11px] focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition" onchange="window.applySorting()">
                                            <option value="title" <%= (!query.sortBy || query.sortBy === 'title') ? 'selected' : '' %>>Judul (A-Z)</option>
                                            <option value="updatedAt" <%= query.sortBy === 'updatedAt' ? 'selected' : '' %>>Terakhir Diupdate</option>
                                            <option value="createdAt" <%= query.sortBy === 'createdAt' ? 'selected' : '' %>>Terakhir Ditambahkan</option>
                                        </select>
                                        <button 
                                            type="button" 
                                            id="sortOrderToggle" 
                                            class="w-full px-2 py-1.5 bg-gray-100 hover:bg-gray-200 active:bg-gray-300 border border-gray-300 rounded-md text-[11px] transition shadow-sm flex items-center justify-center gap-1"
                                            onclick="window.toggleSortOrder()"
                                            data-order="<%= query.sortOrder || 'ASC' %>"
                                            title="Klik untuk mengubah urutan"
                                        >
                                            <i id="sortOrderIcon" class="fas <%= (query.sortOrder || 'ASC') === 'DESC' ? 'fa-sort-amount-down' : 'fa-sort-amount-up' %> text-blue-600 text-[10px]"></i>
                                            <span id="sortOrderText" class="text-[11px]"><%= (query.sortOrder || 'ASC') === 'DESC' ? 'Turun' : 'Naik' %></span>
                                        </button>
                                    </div>
                                </div>
                                
                                <!-- Desktop: Horizontal Layout -->
                                <div class="hidden sm:flex sm:items-center sm:justify-between sm:gap-3">
                                    <label class="text-xs md:text-sm font-semibold text-gray-700 flex items-center flex-shrink-0">
                                        <i class="fas fa-sort text-blue-600 mr-2 text-xs md:text-sm"></i> 
                                        <span class="text-xs md:text-sm">Urutkan Berdasarkan:</span>
                                    </label>
                                    <div class="flex gap-2 items-center flex-shrink-0">
                                        <select id="sortBy" class="px-3 md:px-4 py-2 bg-gray-50 border border-gray-300 rounded-lg text-xs md:text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" style="min-width: 140px;" onchange="window.applySorting()">
                                            <option value="title" <%= (!query.sortBy || query.sortBy === 'title') ? 'selected' : '' %>>Judul (A-Z)</option>
                                            <option value="updatedAt" <%= query.sortBy === 'updatedAt' ? 'selected' : '' %>>Terakhir Diupdate</option>
                                            <option value="createdAt" <%= query.sortBy === 'createdAt' ? 'selected' : '' %>>Terakhir Ditambahkan</option>
